<UserControl x:Class="Martify.UserCtrl.WindowCommandUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.UserCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ucWindowCommand">
    <UserControl.Resources>
        <Style x:Key="CompletelyCustomButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Setter Property="Background" Value="MediumSeaGreen"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <StackPanel HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,20,10,0" Orientation="Horizontal">
            <Button Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Transparent"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="35" Height="35"
                    Margin="0,0,10,0"
                    IsTabStop="False"
                    Style="{StaticResource CompletelyCustomButtonStyle}"
                    Command="{Binding MinimizeWindowCommand}"
                    CommandParameter="{Binding ElementName=ucWindowCommand}">
                <Image Source="../resources/images/minimize.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="25" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="30" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>

            <Button Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Transparent"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="35" Height="35"
                    Margin="0,0,10,0"
                    IsTabStop="False"
                    Style="{StaticResource CompletelyCustomButtonStyle}"
                    Command="{Binding ToggleMaximizeWindowCommand}"
                    CommandParameter="{Binding ElementName=ucWindowCommand}">
                <Image HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="25" />
                            <Setter Property="Source" Value="../resources/images/maximize.png" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="30" />
                                </Trigger>
                                <DataTrigger Binding="{Binding Path=WindowState, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" Value="Maximized">
                                    <Setter Property="Source" Value="../resources/images/restore_down.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>

            <Button Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Transparent"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="35" Height="35"
                    Margin="0,0,10,0"
                    IsTabStop="False"
                    Style="{StaticResource CompletelyCustomButtonStyle}"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding ElementName=ucWindowCommand}">
                <Image Source="../resources/images/close_program.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="25" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="30" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>

        </StackPanel>
    </Grid>
</UserControl>