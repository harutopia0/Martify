                                                   FontFamily="Roboto"
                                                   Foreground="#4CAF50"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Item 3 -->
                            <Border Background="{DynamicResource ItemBackground}" 
                                    CornerRadius="15" 
                                    Padding="12" 
                                    Margin="5,0,5,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            Background="#F3E5F5"
                                            CornerRadius="10"
                                            Width="50"
                                            Height="50"
                                            Margin="0,0,12,0">
                                        <materialDesign:PackIcon Kind="Rice"
                                                                 Width="30"
                                                                 Height="30"
                                                                 Foreground="#9C27B0"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Gạo ST25"
