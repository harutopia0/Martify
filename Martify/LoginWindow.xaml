<Window x:Class="Martify.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Martify"
        mc:Ignorable="d"
        Height="450"
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Storyboard x:Key="GradientRotateStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AnimatedBorderBrush"
                             Storyboard.TargetProperty="Transform.Children[0].Angle"
                             From="0" To="360" Duration="0:0:5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Border x:Name="FocusSink"
                Width="0" Height="0"
                Focusable="True"
                Background="Transparent"
                Opacity="0"/>

        <Border CornerRadius="26" BorderThickness="8">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource GradientRotateStoryboard}"/>
                </EventTrigger>
            </Border.Triggers>

            <Border.BorderBrush>
                <LinearGradientBrush x:Name="AnimatedBorderBrush" StartPoint="-1,0.5" EndPoint="0.5,1">
                    <GradientStop Color="#FF71FBF8" Offset="0.00" />
                    <GradientStop Color="LightBlue" Offset="0.30" />
                    <GradientStop Color="#FF71FBF8" Offset="0.55" />
                    <GradientStop Color="AliceBlue" Offset="0.80" />
                    <GradientStop Color="Gray" Offset="1.00" />
                    <LinearGradientBrush.Transform>
                        <TransformGroup>
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                        </TransformGroup>
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border Background="White" CornerRadius="20">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="25,25,0,0">
                            <Image Source="resources/images/Martify.png" Width="60" Height="60" />
                            <Label Content="Martify"
                                   FontFamily="{StaticResource PasseroOne}"
                                   FontSize="42"
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center"
                                   Foreground="Black" 
                                   Margin="10,0,0,0"/>
                        </StackPanel>

                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,60,0,0" Width="248">

                            <Image Source="resources/images/blur_image.png"
                                   Stretch="Fill"
                                   Width="248" Height="273" />

                            <Border CornerRadius="20" BorderThickness="2" Focusable="False" BorderBrush="Transparent">
                                <Border Background="Gray" Opacity="0.1" Focusable="False" CornerRadius="17" />
                            </Border>

                            <Grid Margin="20,15,20,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0" Content="Sign in"
                                       Margin="-8,0,0,0"
                                       FontFamily="{StaticResource RubikGlitchPop}"
                                       FontSize="35"
                                       FontWeight="Bold"
                                       VerticalContentAlignment="Center"
                                       Foreground="#FF055BAC" RenderTransformOrigin="0.5,0.5" >
                                    <Label.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform AngleX="23.775"/>
                                            <RotateTransform/>
                                            <TranslateTransform X="10.15"/>
                                        </TransformGroup>
                                    </Label.RenderTransform>
                                </Label>

                                <Label Grid.Row="1" Content="Username or email address"
                                       FontFamily="{StaticResource YanoneKaffeesatz}"
                                       FontSize="16"
                                       Foreground="Gray" Margin="0,10,0,0" />

                                <Grid Grid.Row="2" Margin="0,2,0,0">
                                    <Border x:Name="usernameBorder" Focusable="False" BorderThickness="1" BorderBrush="Gray" CornerRadius="8" Background="AliceBlue">
                                        <Grid>
                                            <TextBox x:Name="usernameTextBox"
                                                     VerticalContentAlignment="Center"
                                                     Padding="30,0,5,0"  
                                                     Height="30"
                                                     FontFamily="Arial"
                                                     FontSize="12"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Foreground="Black"
                                                     GotFocus="usernameTextBoxGotFocus"
                                                     LostFocus="usernameTextBoxLostFocus"/>
                                            <Image Source="resources/images/user_icon.png"
                                                   HorizontalAlignment="Left"
                                                   Width="20" Height="20"
                                                   Margin="5,0,0,0"
                                                   IsHitTestVisible="False"/>
                                        </Grid>
                                    </Border>
                                    <Border x:Name="usernameFocusBorder"
                                            BorderThickness="3"
                                            CornerRadius="5"
                                            Visibility="Collapsed"
                                            IsHitTestVisible="False"
                                            Focusable="false"
                                            BorderBrush="#4b91cf"/>
                                </Grid>

                                <Label Grid.Row="3" Content="Password"
                                       FontFamily="{StaticResource YanoneKaffeesatz}"
                                       FontSize="16"
                                       Foreground="Gray" Margin="0,10,0,0" />

                                <Grid Grid.Row="4" Margin="0,2,0,0">
                                    <Border x:Name="passwordBorder" Focusable="False" BorderThickness="1" BorderBrush="Gray" CornerRadius="8" Background="AliceBlue">
                                        <Grid>
                                            <TextBox x:Name="showPasswordTextBox"
                                                     VerticalContentAlignment="Center"
                                                     Padding="30,0,35,0"
                                                     Height="30"
                                                     FontFamily="Arial"
                                                     FontSize="12"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Foreground="Black"
                                                     Visibility="Collapsed"
                                                     GotFocus="passwordBoxGotFocus"
                                                     LostFocus="passwordBoxLostFocus"/>
                                            <PasswordBox x:Name="passwordBox"
                                                         VerticalContentAlignment="Center"
                                                         Padding="30,0,35,0"
                                                         Height="30"
                                                         FontFamily="Arial"
                                                         FontSize="8"
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         Foreground="Black"
                                                         GotFocus="passwordBoxGotFocus"
                                                         LostFocus="passwordBoxLostFocus"/>
                                            <Image Source="resources/images/key_icon.png"
                                                   HorizontalAlignment="Left"
                                                   Width="20" Height="20"
                                                   Margin="5,0,0,0"
                                                   IsHitTestVisible="False"/>
                                            <Image x:Name="eyeIcon" 
                                                   Source="resources/images/eye_closed.png"
                                                   HorizontalAlignment="Right"
                                                   Width="20" Height="20"
                                                   Margin="0,0,8,0"
                                                   Cursor="Hand"
                                                   Focusable="False"
                                                   MouseLeftButtonDown="EyeIcon_MouseLeftButtonDown"/>
                                        </Grid>
                                    </Border>
                                    <Border x:Name="passwordFocusBorder"
                                            BorderThickness="3"
                                            CornerRadius="5"
                                            Visibility="Collapsed"
                                            IsHitTestVisible="False"
                                            Focusable="False"
                                            BorderBrush="#4b91cf"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Image Source="resources/images/login-banner.png" Margin="20,30,10,5"/>
                    </Grid>

                    <Image Source="resources/images/x_icon.png"
                           Grid.Column="1"
                           Margin="0,10,10,0"
                           Width="30" Height="30"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Top"
                           MouseLeftButtonDown="CloseProgram_Click"
                           ToolTip="Close Program"/>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>