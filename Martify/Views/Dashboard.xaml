<UserControl x:Class="Martify.Views.Dashboard"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:Martify.Views"
xmlns:vm="clr-namespace:Martify.ViewModels" 
xmlns:converters="clr-namespace:Martify.Converters"
xmlns:behaviors="clr-namespace:Martify.Behaviors"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
mc:Ignorable="d" 
d:DesignHeight="720" d:DesignWidth="864"
d:Style="{x:Null}"
d:DataContext="{d:DesignInstance Type=vm:DashboardVM, IsDesignTimeCreatable=True}">

    <UserControl.Resources>
        <converters:RevenueHeightConverter x:Key="RevenueHeightConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding RefreshDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="280"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="379*"/>
                <ColumnDefinition Width="235*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{DynamicResource CardBackground}" 
                    Margin="20,20,15,0"
                    CornerRadius="20" Grid.ColumnSpan="2"
                    CacheMode="BitmapCache">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Margin="25,15,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <TextBlock Text="Doanh Thu Tuần Gần Nhất"
                                   FontSize="25" 
                                   FontFamily="Roboto Black"
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Kind="CurrencyUsd"
                                                 Width="28"
                                                 Height="28"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Chart Area -->
                    <ItemsControl 
                                  ItemsSource="{Binding DailyRevenues}"
                                  Margin="25,6,25,9" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Bar Container -->
                                    <Grid Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                        <Grid.ToolTip>
                                            <ToolTip Background="Transparent" 
                                                     BorderBrush="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8"
                                                     HasDropShadow="True">
                                                <Border CornerRadius="15" 
                                                        Padding="15"
                                                        Background="{DynamicResource CardBackground}"
                                                        BorderBrush="#067FF8"
                                                        BorderThickness="2"
                                                        Margin="10">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000"
                                                                          BlurRadius="20"
                                                                          ShadowDepth="5"
                                                                          Direction="270"
                                                                          Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="280">
                                                        <!-- Date Header -->
                                                        <TextBlock Text="{Binding FullDate}"
                                                                   FontSize="14"
                                                                   FontFamily="Roboto Bold"
                                                                   Foreground="{DynamicResource PrimaryText}"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,0,0,10"/>

                                                        <!-- Revenue Amount -->
                                                        <Border Background="#067FF8" 
                                                                CornerRadius="8"
                                                                Padding="10"
                                                                Margin="0,0,0,10">
                                                            <StackPanel>
                                                                <TextBlock Text="Doanh thu"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="White"
                                                                           Opacity="0.9"/>
                                                                <TextBlock Text="{Binding FormattedRevenue}"
                                                                           FontSize="16"
                                                                           FontFamily="Roboto Bold"
                                                                           Foreground="White"
                                                                           Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- Proportion of Week -->
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="Tỷ lệ trong tuần"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Medium"
                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding PercentageOfWeekFormatted}"
                                                                       FontSize="13"
                                                                       FontFamily="Roboto Bold"
                                                                       Foreground="#067FF8"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>

                                                        <!-- Separator -->
                                                        <Border Height="1" 
                                                                Background="{DynamicResource SecondaryText}"
                                                                Opacity="0.2"
                                                                Margin="0,5,0,10"/>

                                                        <!-- Comparison with Previous Day -->
                                                        <Grid Margin="0,0,0,6">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowLeft"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày trước"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithPreviousFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasPreviousDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>

                                                        <!-- Comparison with Next Day -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowRight"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày sau"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithNextFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasNextDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Grid.ToolTip>

                                        <Border Background="#F5F5F5" 
                                                CornerRadius="5"
                                                Height="120"
                                                VerticalAlignment="Bottom"/>

                                        <Border behaviors:BarAnimationBehavior.AnimateOnLoad="True"
                                                Background="#067FF8" 
                                                CornerRadius="5"
                                                VerticalAlignment="Bottom"
                                                MinHeight="2">
                                            <Border.Height>
                                                <MultiBinding Converter="{StaticResource RevenueHeightConverter}">
                                                    <Binding Path="Revenue"/>
                                                    <Binding Path="MaxRevenue"/>
                                                </MultiBinding>
                                            </Border.Height>
                                        </Border>
                                    </Grid>

                                    <!-- Day of week -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding DayOfWeek}"
                                               FontSize="11"
                                               FontFamily="Roboto Medium"
                                               Foreground="{DynamicResource SecondaryText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,2"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding DayLabel}"
                                               FontSize="12"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Total Revenue and Comparison at bottom -->
                    <Grid Grid.Row="2" Margin="25,2,25,13">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="Tổng: "
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       Foreground="{DynamicResource SecondaryText}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding GiaTriDoanhThu, StringFormat={}{0:N0} VND}"
                                       FontSize="20"
                                       FontFamily="Roboto Bold"
                                       Foreground="#067FF8"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding TyLeThayDoi, StringFormat={}{0:F1}%}"
                                       FontSize="16"
                                       FontFamily="Roboto Bold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <materialDesign:PackIcon Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Kind" Value="TrendingUp"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Kind" Value="TrendingDown"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
                Grid.Row="0" 
                Grid.RowSpan="3"
                Background="{DynamicResource CardBackground}" 
                Margin="0,20,20,20"
                CornerRadius="20"
                CacheMode="BitmapCache">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Margin="15">
                <TextBlock Text="Tổng Quan Nhanh"
                           FontSize="20"
                           FontFamily="Roboto Black"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource PrimaryText}"/>

                <Border CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding NavigateToProductsCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Package" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#067FF8"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Sản Phẩm"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoSanPham, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#067FF8"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding NavigateToInvoicesCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Receipt" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#4CAF50"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Đơn Hàng"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoDonHang, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding NavigateToEmployeesCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#FF9800"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Nhân Viên"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoNhanVien, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Thẻ Cảnh Báo Tồn Kho -->
                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,0">
                    <StackPanel>
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#F44336"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Cảnh Báo"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>

                        <!-- Cảnh báo sắp hết hàng (Vàng/Cam) -->
                        <Border CornerRadius="8" 
                                Padding="10,8"
                                Margin="0,0,0,8"
                                Cursor="Hand">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding LowStockAlertCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFE0B2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="TrendingDown" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#FF9800"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>

                                <TextBlock Grid.Column="1"
                                           Text="Sắp hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#F57C00"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamSapHet, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Cảnh báo hết hàng (Đỏ) -->
                        <Border CornerRadius="8" 
                                Padding="10,8"
                                Cursor="Hand">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding OutOfStockAlertCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#FFEBEE"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FFCDD2"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="PackageVariantClosed" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#F44336"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>

                                <TextBlock Grid.Column="1"
                                           Text="Hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#D32F2F"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamHetHang, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#F44336"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Quick Actions Bar - Unified Container -->
        <Border Grid.Column="0" 
                Grid.Row="1"
                Background="{DynamicResource CardBackground}"
                CornerRadius="20"
                Margin="20,0,15,20"
                Padding="20"
                CacheMode="BitmapCache">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>

            <UniformGrid Columns="4" HorizontalAlignment="Stretch">

                <!-- Action 1: Create Order -->
                <Border CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding NavigateToProductSelectionCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="CartPlus"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#2196F3"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Tạo Đơn Mới"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 2: Import Goods -->
                <Border CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding ImportGoodsCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="PackageDown"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#4CAF50"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Nhập Hàng"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 3: Check Price -->
                <Border CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding PriceCheckCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF3E0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Barcode"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#FF9800"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Tra Cứu Giá"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 4: Add Employee -->
                <Border CornerRadius="15"
                        Margin="0,0,0,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding OpenAddEmployeeCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="{DynamicResource ItemBackground}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3E5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#9C27B0"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Thêm Nhân Viên"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </Border>

        <!-- Bottom Section: Two Column Layout -->
        <Grid Grid.Column="0" 
              Grid.Row="2"
              Margin="20,0,15,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: High Value Invoices -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    Margin="0,0,10,0"
                    CornerRadius="20"
                    CacheMode="BitmapCache">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="25,15,25,10"
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="Hóa Đơn Giá Trị Cao Tuần"
                                   FontSize="20"
                                   FontFamily="Roboto Black"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryText}"/>

                        <materialDesign:PackIcon Kind="Trophy" 
                                                 Width="28" 
                                                 Height="28" 
                                                 Foreground="#FFD700"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="15,0,15,15">
                        <ItemsControl ItemsSource="{Binding TopInvoices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ItemBackground}" 
                                            CornerRadius="15" 
                                            Padding="15" 
                                            Margin="5,5,5,10">
                                        <Border.ToolTip>
                                            <ToolTip Background="Transparent" 
                                                     BorderBrush="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8"
                                                     HasDropShadow="True"
                                                     Placement="Left"
                                                     HorizontalOffset="-10">
                                                <Border CornerRadius="15" 
                                                        Padding="15"
                                                        Background="{DynamicResource CardBackground}"
                                                        BorderBrush="#067FF8"
                                                        BorderThickness="2"
                                                        Margin="10">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000"
                                                                          BlurRadius="20"
                                                                          ShadowDepth="5"
                                                                          Direction="270"
                                                                          Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="280" Margin="5">
                                                            <!-- Invoice ID Header -->
                                                            <TextBlock Text="{Binding InvoiceID}"
                                                                       FontSize="16"
                                                                       FontFamily="Roboto Bold"
                                                                       Foreground="{DynamicResource PrimaryText}"
                                                                       TextWrapping="Wrap"
                                                                       Margin="0,0,0,10"/>

                                                            <!-- Total Amount -->
                                                            <Border Background="#067FF8" 
                                                                    CornerRadius="8"
                                                                    Padding="10"
                                                                    Margin="0,0,0,10">
                                                                <StackPanel>
                                                                    <TextBlock Text="Tổng giá trị"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Medium"
                                                                               Foreground="White"
                                                                               Opacity="0.9"/>
                                                                    <TextBlock Text="{Binding FormattedAmount}"
                                                                               FontSize="18"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="White"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <!-- Rank Information -->
                                                            <Grid Margin="0,0,0,8">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0"
                                                                           Text="Xếp hạng"
                                                                           FontSize="12"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBlock Grid.Column="1"
                                                                           Text="{Binding RankText}"
                                                                           FontSize="13"
                                                                           FontFamily="Roboto Bold"
                                                                           Foreground="{Binding RankColor}"
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>

                                                            <!-- Separator -->
                                                            <Border Height="1" 
                                                                    Background="{DynamicResource SecondaryText}"
                                                                    Opacity="0.2"
                                                                    Margin="0,5,0,10"/>

                                                            <!-- Invoice Details Section -->
                                                            <TextBlock Text="Chi tiết hóa đơn"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       Foreground="{DynamicResource PrimaryText}"
                                                                       Margin="0,0,0,8"/>

                                                            <!-- Invoice Details Header -->
                                                            <Grid Margin="0,0,0,5">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="2*"/>
                                                                    <ColumnDefinition Width="1.5*"/>
                                                                    <ColumnDefinition Width="1.5*"/>
                                                                    <ColumnDefinition Width="1.25*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="0"
                                                                           Text="Sản phẩm"
                                                                           FontSize="10"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           HorizontalAlignment="Left"/>
                                                                <TextBlock Grid.Column="1"
                                                                           Text="Đơn giá"
                                                                           FontSize="10"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           HorizontalAlignment="Right"/>
                                                                <TextBlock Grid.Column="2"
                                                                           Text="SL"
                                                                           FontSize="10"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           HorizontalAlignment="Center"/>
                                                                <TextBlock Grid.Column="3"
                                                                           Text="Thành tiền"
                                                                           FontSize="10"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           HorizontalAlignment="Right"/>
                                                            </Grid>

                                                            <!-- Invoice Details List (Top 5 Most Valuable) -->
                                                            <ItemsControl ItemsSource="{Binding Top5InvoiceDetails}"
                                                                          Margin="0,0,0,8">
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid Margin="0,0,0,8">
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="Auto"/>
                                                                                <RowDefinition Height="Auto"/>
                                                                            </Grid.RowDefinitions>

                                                                            <!-- Product Name -->
                                                                            <TextBlock Grid.Row="0"
                                                                                       Text="{Binding Product.ProductName}"
                                                                                       FontSize="10"
                                                                                       FontFamily="Roboto Bold"
                                                                                       Foreground="{DynamicResource PrimaryText}"
                                                                                       TextWrapping="Wrap"
                                                                                       Margin="0,0,0,2"/>

                                                                            <!-- Details Row -->
                                                                            <Grid Grid.Row="1">
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="2*"/>
                                                                                    <ColumnDefinition Width="1.5*"/>
                                                                                    <ColumnDefinition Width="1.5*"/>
                                                                                    <ColumnDefinition Width="1.25*"/>
                                                                                </Grid.ColumnDefinitions>

                                                                                <TextBlock Grid.Column="0"
                                                                                           Text="{Binding Product.ProductID}"
                                                                                           FontSize="9"
                                                                                           FontFamily="Roboto"
                                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                                           HorizontalAlignment="Left"
                                                                                           TextTrimming="CharacterEllipsis"/>
                                                                                <TextBlock Grid.Column="1"
                                                                                           Text="{Binding SalePrice, StringFormat={}{0:N0}}"
                                                                                           FontSize="9"
                                                                                           FontFamily="Roboto"
                                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                                           HorizontalAlignment="Right"/>
                                                                                <TextBlock Grid.Column="2"
                                                                                           Text="{Binding Quantity}"
                                                                                           FontSize="9"
                                                                                           FontFamily="Roboto"
                                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                                           HorizontalAlignment="Center"/>
                                                                                <TextBlock Grid.Column="3"
                                                                                           Text="{Binding Total, StringFormat={}{0:N0}}"
                                                                                           FontSize="9"
                                                                                           FontFamily="Roboto Bold"
                                                                                           Foreground="{DynamicResource PrimaryText}"
                                                                                           HorizontalAlignment="Right"/>
                                                                            </Grid>
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>

                                                            <!-- Show remaining products count if more than 5 -->
                                                            <Border Background="#E3F2FD"
                                                                    CornerRadius="8"
                                                                    Padding="8,5"
                                                                    Margin="0,0,0,10"
                                                                    Visibility="{Binding HasMoreProducts, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                <StackPanel Orientation="Horizontal"
                                                                            HorizontalAlignment="Center">
                                                                    <materialDesign:PackIcon Kind="InformationOutline"
                                                                                           Width="14"
                                                                                           Height="14"
                                                                                           Foreground="#1976D2"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="0,0,5,0"/>
                                                                    <TextBlock Text="{Binding RemainingProductsText}"
                                                                               FontSize="10"
                                                                               FontFamily="Roboto Medium"
                                                                               Foreground="#1976D2"
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <!-- Separator -->
                                                            <Border Height="1" 
                                                                    Background="{DynamicResource SecondaryText}"
                                                                    Opacity="0.2"
                                                                    Margin="0,5,0,10"/>

                                                            <!-- Employee Information -->
                                                            <Grid Margin="0,0,0,6">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <materialDesign:PackIcon Grid.Column="0"
                                                                                       Kind="Account"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="Nhân viên"
                                                                               FontSize="10"
                                                                               FontFamily="Roboto"
                                                                               Foreground="{DynamicResource SecondaryText}"/>
                                                                    <TextBlock Text="{Binding EmployeeName}"
                                                                               FontSize="12"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Date and Time Information -->
                                                            <Grid Margin="0,0,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <materialDesign:PackIcon Grid.Column="0"
                                                                                       Kind="Calendar"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="Ngày tạo"
                                                                               FontSize="10"
                                                                               FontFamily="Roboto"
                                                                               Foreground="{DynamicResource SecondaryText}"/>
                                                                    <TextBlock Text="{Binding FullFormattedDate}"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Medium"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               TextWrapping="Wrap"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Border.ToolTip>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                    Background="{Binding RankColor}" 
                                                    CornerRadius="10" 
                                                    Width="40" 
                                                    Height="40"
                                                    Margin="0,0,7,0">
                                                <TextBlock Text="{Binding Rank}" 
                                                           FontSize="20" 
                                                           FontFamily="Roboto Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding InvoiceID}"
                                                           FontSize="16"
                                                           FontFamily="Roboto Bold"
                                                           Foreground="{DynamicResource PrimaryText}"/>
                                                <TextBlock Text="{Binding EmployeeName}"
                                                           FontSize="12"
                                                           FontFamily="Roboto"
                                                           Foreground="{DynamicResource SecondaryText}"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding FormattedDate}"
                                                           FontSize="10"
                                                           FontFamily="Roboto Light"
                                                           Foreground="{DynamicResource SecondaryText}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding FormattedAmount}"
                                                       FontSize="16"
                                                       FontFamily="Roboto Bold"
                                                       Foreground="{Binding RankColor}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Column: Best Selling Products -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource CardBackground}" 
                    Margin="10,0,0,0"
                    CornerRadius="20"
                    CacheMode="BitmapCache">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="25,15,25,10"
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="Top Sản Phẩm"
                                   FontSize="20"
                                   FontFamily="Roboto Black"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryText}"/>

                        <materialDesign:PackIcon Kind="Fire" 
                                                 Width="28" 
                                                 Height="28" 
                                                 Foreground="#FF5722"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="15,0,15,15">
                        <ItemsControl ItemsSource="{Binding TopProducts}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ItemBackground}" 
                                            CornerRadius="15" 
                                            Padding="12" 
                                            Margin="5,5,5,10">
                                        <Border.ToolTip>
                                            <ToolTip Background="Transparent" 
                                                     BorderBrush="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8"
                                                     HasDropShadow="True"
                                                     Placement="Right"
                                                     HorizontalOffset="10">
                                                <Border CornerRadius="15" 
                                                        Padding="15"
                                                        Background="{DynamicResource CardBackground}"
                                                        BorderBrush="#067FF8"
                                                        BorderThickness="2"
                                                        Margin="10">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000"
                                                                          BlurRadius="20"
                                                                          ShadowDepth="5"
                                                                          Direction="270"
                                                                          Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="300">
                                                        <!-- Product Name Header -->
                                                        <TextBlock Text="{Binding ProductName}"
                                                                   FontSize="15"
                                                                   FontFamily="Roboto Bold"
                                                                   Foreground="{DynamicResource PrimaryText}"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,0,0,12"/>

                                                        <!-- Quantity Sold - Main Highlight -->
                                                        <Border Background="#067FF8" 
                                                                CornerRadius="10"
                                                                Padding="12"
                                                                Margin="0,0,0,12">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <!-- Header with Performance Badge -->
                                                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0"
                                                                               Text="Số lượng đã bán"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Medium"
                                                                               Foreground="White"
                                                                               Opacity="0.9"
                                                                               VerticalAlignment="Center"/>
                                                                    <Border Grid.Column="1"
                                                                            Background="White"
                                                                            CornerRadius="6"
                                                                            Padding="8,4"
                                                                            Margin="8,0,0,0">
                                                                        <TextBlock Text="{Binding PerformanceLevel}"
                                                                                       FontSize="10"
                                                                                       FontFamily="Roboto Bold"
                                                                                       Foreground="{Binding IconColor}"
                                                                                       VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </Grid>

                                                                <!-- Quantity Value with Icon -->
                                                                <Grid Grid.Row="1">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Grid.Column="0"
                                                                               Text="{Binding FormattedQuantityOnly}"
                                                                               FontSize="20"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="White"
                                                                               VerticalAlignment="Center"/>
                                                                    <materialDesign:PackIcon Grid.Column="1"
                                                                                           Kind="TrendingUp"
                                                                                           Width="28"
                                                                                           Height="28"
                                                                                           Foreground="White"
                                                                                           Opacity="0.3"
                                                                                           VerticalAlignment="Center"
                                                                                           Margin="10,0,0,0"/>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>

                                                        <!-- Separator -->
                                                        <Border Height="1" 
                                                                Background="{DynamicResource SecondaryText}"
                                                                Opacity="0.2"
                                                                Margin="0,0,0,12"/>

                                                        <!-- Product Information Section -->
                                                        <TextBlock Text="Thông tin sản phẩm"
                                                                   FontSize="11"
                                                                   FontFamily="Roboto Bold"
                                                                   Foreground="{DynamicResource SecondaryText}"
                                                                   Margin="0,0,0,8"/>

                                                        <!-- Product ID & Unit - 2 Column Grid -->
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Product ID -->
                                                            <Border Grid.Column="0"
                                                                    Background="{DynamicResource ItemBackground}"
                                                                    CornerRadius="8"
                                                                    Padding="8"
                                                                    Margin="0,0,4,0">
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                        <materialDesign:PackIcon Kind="Barcode"
                                                                                               Width="12"
                                                                                               Height="12"
                                                                                               Foreground="{DynamicResource SecondaryText}"
                                                                                               VerticalAlignment="Center"
                                                                                               Margin="0,0,4,0"/>
                                                                        <TextBlock Text="Mã SP"
                                                                                   FontSize="9"
                                                                                   FontFamily="Roboto Medium"
                                                                                   Foreground="{DynamicResource SecondaryText}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <TextBlock Text="{Binding ProductID}"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <!-- Unit -->
                                                            <Border Grid.Column="1"
                                                                    Background="{DynamicResource ItemBackground}"
                                                                    CornerRadius="8"
                                                                    Padding="8"
                                                                    Margin="4,0,0,0">
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                        <materialDesign:PackIcon Kind="WeightKilogram"
                                                                                               Width="12"
                                                                                               Height="12"
                                                                                               Foreground="{DynamicResource SecondaryText}"
                                                                                               VerticalAlignment="Center"
                                                                                               Margin="0,0,4,0"/>
                                                                        <TextBlock Text="Đơn vị"
                                                                                   FontSize="9"
                                                                                   FontFamily="Roboto Medium"
                                                                                   Foreground="{DynamicResource SecondaryText}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <TextBlock Text="{Binding Unit}"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </Grid>

                                                        <!-- Price & Stock - 2 Column Grid -->
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <!-- Price -->
                                                            <Border Grid.Column="0"
                                                                    Background="{DynamicResource ItemBackground}"
                                                                    CornerRadius="8"
                                                                    Padding="8"
                                                                    Margin="0,0,4,0">
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                        <materialDesign:PackIcon Kind="CurrencyUsd"
                                                                                               Width="12"
                                                                                               Height="12"
                                                                                               Foreground="{DynamicResource SecondaryText}"
                                                                                               VerticalAlignment="Center"
                                                                                               Margin="0,0,4,0"/>
                                                                        <TextBlock Text="Giá bán"
                                                                                   FontSize="9"
                                                                                   FontFamily="Roboto Medium"
                                                                                   Foreground="{DynamicResource SecondaryText}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <TextBlock Text="{Binding FormattedPrice}"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="#4CAF50"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>

                                                            <!-- Stock -->
                                                            <Border Grid.Column="1"
                                                                    Background="{DynamicResource ItemBackground}"
                                                                    CornerRadius="8"
                                                                    Padding="8"
                                                                    Margin="4,0,0,0">
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                                        <materialDesign:PackIcon Kind="PackageVariant"
                                                                                               Width="12"
                                                                                               Height="12"
                                                                                               Foreground="{DynamicResource SecondaryText}"
                                                                                               VerticalAlignment="Center"
                                                                                               Margin="0,0,4,0"/>
                                                                        <TextBlock Text="Tồn kho"
                                                                                   FontSize="9"
                                                                                   FontFamily="Roboto Medium"
                                                                                   Foreground="{DynamicResource SecondaryText}"
                                                                                   VerticalAlignment="Center"/>
                                                                    </StackPanel>
                                                                    <TextBlock Text="{Binding FormattedStockQuantity}"
                                                                               FontSize="11"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               TextTrimming="CharacterEllipsis"/>
                                                                </StackPanel>
                                                            </Border>
                                                        </Grid>

                                                        <!-- Category -->
                                                        <Border Background="{DynamicResource ItemBackground}"
                                                                CornerRadius="8"
                                                                Padding="10,8"
                                                                Margin="0,0,0,0">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <materialDesign:PackIcon Grid.Column="0"
                                                                                       Kind="Tag"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,8,0"/>
                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="Danh mục"
                                                                               FontSize="9"
                                                                               FontFamily="Roboto Medium"
                                                                               Foreground="{DynamicResource SecondaryText}"/>
                                                                    <TextBlock Text="{Binding CategoryName}"
                                                                               FontSize="12"
                                                                               FontFamily="Roboto Bold"
                                                                               Foreground="{DynamicResource PrimaryText}"
                                                                               Margin="0,2,0,0"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Border.ToolTip>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Product Image -->
                                            <Border Grid.Column="0"
                                                    Background="{Binding BackgroundColor}"
                                                    CornerRadius="10"
                                                    Width="50"
                                                    Height="50"
                                                    Margin="0,0,12,0">
                                                <materialDesign:PackIcon Kind="Package"
                                                                         Width="30"
                                                                         Height="30"
                                                                         Foreground="{Binding IconColor}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ProductName}"
                                                           FontSize="14"
                                                           FontFamily="Roboto Bold"
                                                           Foreground="{DynamicResource PrimaryText}"
                                                           TextWrapping="Wrap"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxHeight="40"/>
                                                <TextBlock Text="{Binding ProductID}"
                                                           FontSize="10"
                                                           FontFamily="Roboto"
                                                           Foreground="{DynamicResource SecondaryText}"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding FormattedQuantitySold}"
                                                           FontSize="12"
                                                           FontFamily="Roboto"
                                                           Foreground="#4CAF50"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>