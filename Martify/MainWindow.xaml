<Window x:Class="Martify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Martify" 
        xmlns:uc="clr-namespace:Martify.UserCtrl"
        mc:Ignorable="d"
        Title="Marity" 
        Height="720" Width="1080"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        DataContext="{StaticResource MainVModel}">

    <Grid>
        <Grid Margin="7.5">
            <!--Main Form-->
            <Border Background="White" CornerRadius="20">
                <Grid>

                    <!--Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Login-->
                    <Grid Grid.Column="0">

                    </Grid>

                    <!--Banner Grid-->
                    <Grid Grid.Column="1">
                        
                    </Grid>

                </Grid>
            </Border>
        </Grid>

        
        <uc:GradientBorderUC></uc:GradientBorderUC>
        <uc:WindowControlUC></uc:WindowControlUC>
    </Grid>
</Window>
