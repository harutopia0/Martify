                                    <!-- Product Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Mì Hảo Hảo"
                                                   FontSize="14"
                                                   FontFamily="Roboto Bold"
                                                   Foreground="{DynamicResource PrimaryText}"/>
                                        <TextBlock Text="Đã bán: 1,205"
                                                   FontSize="12"
                                                   FontFamily="Roboto"
                                                   Foreground="#4CAF50"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Item 2 -->
                            <Border Background="{DynamicResource ItemBackground}" 
                                    CornerRadius="15" 
                                    Padding="12" 
                                    Margin="5,0,5,10">
