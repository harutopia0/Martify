<UserControl x:Class="Martify.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="864"
             d:Style="{x:Null}">

    <UserControl.DataContext>
        <vm:SettingsVM />
    </UserControl.DataContext>

    <Grid Background="{DynamicResource MainBackground}">
        <TextBlock Text="Cài Đặt Hệ Thống"
                   FontSize="30" FontFamily="Roboto Black" 
                   Foreground="{DynamicResource PrimaryText}"
                   Margin="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Border Background="{DynamicResource CardBackground}" 
                Margin="30,80,30,30" CornerRadius="30">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                  BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.3"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">

                    <Border Background="{DynamicResource ItemBackground}" 
                            CornerRadius="15" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0" Kind="AccountCircle" Width="40" Height="40" Foreground="#067FF8" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Thông Tin Tài Khoản" FontSize="18" FontFamily="Roboto Bold" 
                                           Foreground="{DynamicResource PrimaryText}"/>
                                <TextBlock Text="Chỉnh sửa thông tin cá nhân và mật khẩu" FontSize="14" FontFamily="Roboto" 
                                           Foreground="{DynamicResource SecondaryText}"/>
                            </StackPanel>

                            <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}" 
                                    Content="CHỈNH SỬA" Foreground="#067FF8"
                                    Command="{Binding OpenEditProfileCommand}"/>
                        </Grid>
                    </Border>

                    <Border Background="{DynamicResource ItemBackground}" 
                            CornerRadius="15" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0" Kind="ThemeLightDark" Width="40" Height="40" Foreground="#9C27B0" VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Giao Diện" FontSize="18" FontFamily="Roboto Bold" 
                                           Foreground="{DynamicResource PrimaryText}"/>
                                <TextBlock Text="Chuyển đổi giữa chế độ Sáng / Tối" FontSize="14" FontFamily="Roboto" 
                                           Foreground="{DynamicResource SecondaryText}"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="2"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="{Binding IsDarkMode}"
                                          ToolTip="Bật/Tắt Chế độ tối"
                                          Background="#9C27B0" 
                                          BorderBrush="#9C27B0"/>
                        </Grid>
                    </Border>

                    <Border Background="{DynamicResource ItemBackground}" 
                            CornerRadius="15" Padding="20" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Grid.Column="0" Kind="Information" Width="40" Height="40" Foreground="#4CAF50" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Về Martify" FontSize="18" FontFamily="Roboto Bold" 
                                           Foreground="{DynamicResource PrimaryText}"/>
                                <TextBlock Text="Phiên bản 1.0.0 - Copyright 2025" FontSize="14" FontFamily="Roboto" 
                                           Foreground="{DynamicResource SecondaryText}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Background="{DynamicResource ItemBackground}" 
                            CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:PackIcon Grid.Column="0" Kind="Logout" 
                                                     Width="40" Height="40" 
                                                     Foreground="#FF5252" 
                                                     VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Đăng Xuất" FontSize="18" FontFamily="Roboto Bold" 
                                           Foreground="{DynamicResource PrimaryText}"/>
                                <TextBlock Text="Thoát khỏi phiên làm việc hiện tại" FontSize="14" FontFamily="Roboto" 
                                           Foreground="{DynamicResource SecondaryText}"/>
                            </StackPanel>

                            <Button Grid.Column="2" 
                                    Command="{Binding LogoutCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                    Content="THOÁT" 
                                    BorderBrush="#FF5252" 
                                    Foreground="#FF5252"/>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>