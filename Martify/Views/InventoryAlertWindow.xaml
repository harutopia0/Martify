<Window x:Class="Martify.Views.InventoryAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Inventory Alert Details" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource CardBackground}">

    <Window.Resources>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="{DynamicResource ItemBackground}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource CardBackground}"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#067FF8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Roboto Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{DynamicResource ItemBackground}" 
                Padding="20"
                CornerRadius="0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Width="32" 
                                             Height="32" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,15,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="TrendingDown"/>
                                <Setter Property="Foreground" Value="#FF9800"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                        <Setter Property="Kind" Value="PackageVariantClosed"/>
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <StackPanel>
                        <TextBlock FontSize="24" 
                                   FontFamily="Roboto Bold"
                                   Foreground="{DynamicResource PrimaryText}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="San Pham Sap Het Hang"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                            <Setter Property="Text" Value="San Pham Het Hang"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock FontSize="13" 
                                   FontFamily="Roboto"
                                   Foreground="{DynamicResource SecondaryText}"
                                   Margin="0,5,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Products with stock quantity &lt;= 10"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                            <Setter Property="Text" Value="Products with stock quantity = 0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Statistics Bar -->
        <Border Grid.Row="1" 
                Background="{DynamicResource AlertBackground}" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Products -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Package" 
                                             Width="20" 
                                             Height="20" 
                                             Foreground="#067FF8"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="Total Products" 
                                   FontSize="11"
                                   FontFamily="Roboto"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock Text="{Binding Products.Count}" 
                                   FontSize="20"
                                   FontFamily="Roboto Bold"
                                   Foreground="#067FF8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Total Stock Quantity -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Warehouse" 
                                             Width="20" 
                                             Height="20" 
                                             Foreground="#4CAF50"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="Total Stock" 
                                   FontSize="11"
                                   FontFamily="Roboto"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock Text="{Binding TotalStockQuantity, StringFormat={}{0:N0}}" 
                                   FontSize="20"
                                   FontFamily="Roboto Bold"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </StackPanel>

                <!-- Estimated Value -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="Cash" 
                                             Width="20" 
                                             Height="20" 
                                             Foreground="#FF9800"
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="Estimated Value" 
                                   FontSize="11"
                                   FontFamily="Roboto"
                                   Foreground="{DynamicResource SecondaryText}"/>
                        <TextBlock Text="{Binding TotalValue, StringFormat={}{0:N0} VND}" 
                                   FontSize="20"
                                   FontFamily="Roboto Bold"
                                   Foreground="#FF9800"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Products}"
                  Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Product ID" 
                                    Binding="{Binding ProductID}" 
                                    Width="100"/>

                <DataGridTextColumn Header="Product Name" 
                                    Binding="{Binding ProductName}" 
                                    Width="*"/>

                <DataGridTextColumn Header="Category" 
                                    Binding="{Binding Category.CategoryName}" 
                                    Width="150"/>

                <DataGridTextColumn Header="Unit" 
                                    Binding="{Binding Unit}" 
                                    Width="80"/>

                <DataGridTemplateColumn Header="Stock" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StockQuantity, StringFormat={}{0:N0}}" 
                                       HorizontalAlignment="Right"
                                       FontFamily="Roboto Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.AlertType, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                         Value="LowStock">
                                                <Setter Property="Foreground" Value="#FF9800"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding DataContext.AlertType, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                         Value="OutOfStock">
                                                <Setter Property="Foreground" Value="#F44336"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Price" 
                                    Binding="{Binding Price, StringFormat={}{0:N0} VND}" 
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Footer with Close Button -->
        <Border Grid.Row="3" 
                Background="{DynamicResource ItemBackground}" 
                Padding="20"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource SecondaryText}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" 
                        Width="120"
                        Height="40"
                        FontSize="14"
                        FontFamily="Roboto Medium"
                        Background="#067FF8"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="15,0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0567D8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
