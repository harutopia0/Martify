<UserControl x:Class="Martify.Views.InventoryTooltip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cv="clr-namespace:Martify.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="350">

    <UserControl.Resources>
        <cv:ImagePathConverter x:Key="ImgConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource CardBackground}" 
            CornerRadius="15" 
            BorderBrush="CornflowerBlue"
            BorderThickness="2"
            Padding="15"
            Width="320">

        <StackPanel>
            <TextBlock Text="{Binding Title}" 
                       FontWeight="Bold" 
                       FontFamily="Times New Roman"
                       FontSize="14" 
                       Foreground="{DynamicResource PrimaryText}"
                       Margin="0,0,0,10"/>

            <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="0,0,0,10"/>

            <ItemsControl ItemsSource="{Binding TopProducts}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="36" Height="36" CornerRadius="0" Margin="0,0,10,0" BorderThickness="1" BorderBrush="#EEEEEE">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource ImgConverter}, TargetNullValue={StaticResource DefaultProduct}, FallbackValue={StaticResource DefaultProduct}}" Stretch="UniformToFill"/>
                                </Border.Background>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProductName}"
                                           FontFamily="Times New Roman"
                                           FontSize="13" 
                                           Foreground="{DynamicResource PrimaryText}"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{Binding ProductID}" 
                                           FontSize="11" 
                                           FontFamily="Times New Roman"
                                           Foreground="{DynamicResource SecondaryText}"/>
                            </StackPanel>

                            <Border Grid.Column="2" CornerRadius="5" Background="#FFEBEE" Padding="8,2" VerticalAlignment="Center">
                                <TextBlock Text="{Binding StockQuantity, StringFormat='SL: {0}'}" 
                                           FontSize="12" 
                                           FontFamily="Times New Roman"
                                           Foreground="#D32F2F"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Background="#F5F5F5" CornerRadius="8" Padding="10,5" Margin="0,5,0,0"
                    Visibility="{Binding HasMoreProducts, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="{Binding RemainingCountText}" 
                           HorizontalAlignment="Center" 
                           FontSize="12" 
                           FontFamily="Times New Roman"
                           Foreground="{DynamicResource SecondaryText}"/>
            </Border>

            <TextBlock Text="Không có sản phẩm nào cần cảnh báo." 
                       FontFamily="Times New Roman"
                       Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVis}}"
                       HorizontalAlignment="Center"
                       Padding="20"
                       Foreground="{DynamicResource SecondaryText}"
                       FontStyle="Italic"/>
        </StackPanel>
    </Border>
</UserControl>