<UserControl x:Class="Martify.Views.LoginErrorPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             mc:Ignorable="d" 
             xmlns:vm="clr-namespace:Martify.ViewModels"
             Style="{StaticResource Page_CinematicFocus_Style}"
             d:Style="{x:Null}"
             IsTabStop="False">
    <UserControl.DataContext>
        <vm:LoginErrorPopupVM />
    </UserControl.DataContext>


    <Grid>
        <Grid Width="200" Height="30">
            <TextBlock Text="Sai tài khoản hoặc mật khẩu." 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Foreground="#FFF87E7E"/>
        </Grid>

    </Grid>
</UserControl>
