<UserControl x:Class="Martify.Views.SidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify"
             mc:Ignorable="d"
             Background="Transparent"
             Name="ucPanel"
             d:Style="{x:Null}">
    <UserControl.Resources>

        <Style x:Key="SidePanelStyle"
           TargetType="RadioButton">
            <Setter Property="IsTabStop"
                    Value="False" />
            <Setter Property="Focusable"
                    Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                            Height="40"
                            Background="Transparent">

                            <Grid>

                                <Image x:Name="SidePanel_Menu_Image"
                                       Source="{TemplateBinding Image.Source}"
                                       Stretch="Uniform"
                                       Margin="0,0,20,0"
                                       Width="25" Height="25"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" 
                                       Panel.ZIndex="1"
                                       />

                                <Grid x:Name="TextBlock_Panel"
                                      Background="Transparent"
                                      Height="35"
                                      Width="150"
                                      Margin="0,0,0,0"
                                      HorizontalAlignment="Left">

                                    <TextBlock Text="{TemplateBinding TextBlock.Text}"
                                               FontFamily="Roboto"
                                               FontWeight="SemiBold"
                                               FontSize="17"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="10,0,0,0"
                                               Foreground="#FFFFFF" />
                                </Grid>

                                <Grid x:Name="Sliding_UpperCase_Panel"
                                      Height="35"
                                      Width="0"
                                      Background="Transparent"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0">


                                    <Border x:Name="Highlighter"
                                            Height="35"
                                            Width="300"
                                            Background="White"
                                            CornerRadius="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0,0,15,0" />
                                    <Ellipse x:Name="ActiveCircle"
                                             Width="35"
                                             Height="35"
                                             Fill="White"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Center" />


                                    <TextBlock x:Name="UpperCase_Text"
                                               Text="{Binding Content, 
                                                      RelativeSource={RelativeSource FindAncestor,
                                                      AncestorType={x:Type RadioButton}}}"
                                               FontFamily="Roboto"
                                               FontWeight="Bold"
                                               FontSize="17"
                                               Foreground="#3A5EEA"
                                               Margin="10,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center">

                                    </TextBlock>
                                </Grid>
                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.3"/>
                            </Trigger>

                            <Trigger Property="RadioButton.IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="Transparent" />
                                <Setter TargetName="SidePanel_Menu_Image"
                                        Property="Source"
                                        Value="{Binding Tag, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type RadioButton}}}" />
                                <!--<Setter Property="Background" TargetName="Highlighter" Value="#FFD3D3D3" />-->
                            </Trigger>

                            <Trigger Property="RadioButton.IsChecked"
                                     Value="true">

                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="Transparent" />

                                <Setter Property="Background"
                                        TargetName="Highlighter"
                                        Value="#FFFFFF" />

                                <Setter Property="Foreground"
                                        TargetName="UpperCase_Text"
                                        Value="#3A5EEA" />

                                <Setter Property="FontSize"
                                        TargetName="UpperCase_Text"
                                        Value="17" />

                                <Setter TargetName="SidePanel_Menu_Image"
                                        Property="Source"
                                        Value="{Binding DataContext, 
                                                        RelativeSource={RelativeSource FindAncestor,
                                                        AncestorType={x:Type RadioButton}}}" />

                            </Trigger>

                            <MultiTrigger>

                                <MultiTrigger.Conditions>
                                    <Condition Property="RadioButton.IsMouseOver"
                                               Value="True" />
                                </MultiTrigger.Conditions>

                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard x:Name="Start_Uppercase_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             DecelerationRatio="0.6"
                                                             From="0"
                                                             To="185"
                                                             Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <RemoveStoryboard BeginStoryboardName="Stop_Indicator" />
                                </MultiTrigger.EnterActions>

                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard x:Name="Stop_Uppercase_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             DecelerationRatio="0.6"
                                                             From="185"
                                                             To="0"
                                                             Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <RemoveStoryboard BeginStoryboardName="Release_Indicator" />
                                </MultiTrigger.ExitActions>

                            </MultiTrigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>

                                    <Condition Property="RadioButton.IsChecked"
                                               Value="True" />

                                </MultiTrigger.Conditions>

                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard x:Name="Lock_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="185"
                                                             To="185"
                                                             Duration="0:0:0.3" />

                                            <ColorAnimation Storyboard.TargetName="ActiveCircle"
                                                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                            To="LightBlue"
                                                            Duration="0:0:1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>

                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard x:Name="Release_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="185"
                                                             To="160"
                                                             Duration="0:0:0" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <BeginStoryboard x:Name="Stop_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="185"
                                                             To="0"
                                                             BeginTime="0:0:0"
                                                             Duration="0:0:0.5" />
                                            
                                            <ColorAnimation Storyboard.TargetName="ActiveCircle"
                                                            Storyboard.TargetProperty="(Ellipse.Fill).(SolidColorBrush.Color)"
                                                            To="White"
                                                            Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>

                            </MultiTrigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidePanelListBoxStyle"
               TargetType="{x:Type ListBox}">

            <Setter Property="IsTabStop"
                    Value="False"/>

            <Setter Property="Focusable"
                    Value="False" />

            <Setter Property="VerticalAlignment"
                    Value="Top" />

            <Setter Property="SelectionMode"
                    Value="Single" />

            <Setter Property="Cursor"
                    Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border>

                            <ScrollViewer Focusable="False"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Disabled">

                                <ItemsPresenter />

                            </ScrollViewer>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <ListBox x:Name="SidePanel_ListBox" 
                     Style="{StaticResource SidePanelListBoxStyle}"
                     SelectedIndex="{Binding SelectedMenuIndex, Mode=TwoWay}">

                <ListBox.Resources>

                    <Style x:Key="dashboard_listboxitem_style"
                           TargetType="ListBoxItem">

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                     RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.DashboardCommand, ElementName=ucPanel}">
                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Trang Chủ" />

                                                <Setter Property="Content"
                                                        Value="TRANG CHỦ" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource DashboardNormal}" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource DashboardHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource DashboardActive}" />

                                            </Style>
                                        </RadioButton.Style>
                                    </RadioButton>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="productselection_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.ProductSelectionCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Bán Hàng" />
                                                <Setter Property="Content"
                                                        Value="BÁN HÀNG" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource CartNormal}" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource CartHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource CartActive}" />

                                            </Style>

                                        </RadioButton.Style>

                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="products_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                     RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.ProductsCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Sản Phẩm" />
                                                <Setter Property="Content"
                                                        Value="SẢN PHẨM" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource ProductsNormal}" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource ProductsHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource ProductsActive}" />

                                            </Style>

                                        </RadioButton.Style>

                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="staff_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"                                                 
                                                 Command="{Binding DataContext.Navigation.EmployeesCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Nhân Viên" />
                                                <Setter Property="Content"
                                                        Value="NHÂN VIÊN" />
                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource StaffNormal}" />


                                                <Setter Property="Tag"
                                                        Value="{StaticResource StaffHover}" />



                                                <Setter Property="DataContext"
                                                        Value="{StaticResource StaffActive}" />
                                            </Style>

                                        </RadioButton.Style>

                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="invoices_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.InvoicesCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Hóa Đơn" />
                                                <Setter Property="Content"
                                                        Value="HÓA ĐƠN" />



                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource ReceiptNormal}" />


                                                <Setter Property="Tag"
                                                        Value="{StaticResource ReceiptHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource ReceiptActive}" />
                                            </Style>

                                        </RadioButton.Style>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="settings_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                     RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.SettingsCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Cài Đặt" />
                                                <Setter Property="Content"
                                                        Value="CÀI ĐẶT" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource SettingsNormal}" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource SettingsHover}" />



                                                <Setter Property="DataContext"
                                                        Value="{StaticResource SettingsActive}" />
                                            </Style>
                                        </RadioButton.Style>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                </ListBox.Resources>

                <ListBox.ItemsPanel>

                    <ItemsPanelTemplate>

                        <Grid HorizontalAlignment="Right">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="0" />

                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>

                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />

                            </Grid.RowDefinitions>

                        </Grid>

                    </ItemsPanelTemplate>

                </ListBox.ItemsPanel>

                <ListBoxItem x:Name="dashboard_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             Grid.Row="0"
                             Style="{StaticResource dashboard_listboxitem_style}"
                             IsEnabled="{Binding DataContext.IsAdmin, ElementName=ucPanel}"
                             Width="200"/>

                <ListBoxItem x:Name="sellproducts_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             Grid.Row="1"
                             Style="{StaticResource productselection_listboxitem_style}" />

                <ListBoxItem x:Name="products_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             Grid.Row="2"
                             IsEnabled="{Binding DataContext.IsAdmin, ElementName=ucPanel}"
                             Style="{StaticResource products_listboxitem_style}" />

                <ListBoxItem x:Name="staff_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             Grid.Row="3"
                             IsEnabled="{Binding DataContext.IsAdmin, ElementName=ucPanel}"
                             Style="{StaticResource staff_listboxitem_style}" />

                <ListBoxItem x:Name="invoices_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             Grid.Row="4"
                             Style="{StaticResource invoices_listboxitem_style}" />

                <ListBoxItem x:Name="settings_sidepanel_listboxitem"
                             IsTabStop="False"
                             Focusable="False"
                             VerticalAlignment="Bottom"
                             Grid.Row="5"
                             Style="{StaticResource settings_listboxitem_style}" />
            </ListBox>
        </StackPanel>

        <!-- Martify Logo at Bottom -->
        <Border Grid.Row="1" 
                Background="Transparent"
                Padding="20,15,20,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
            <Image Source="{StaticResource Martify}"
                   Width="120"
                   Height="120"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Opacity="0.9">
                <Image.Effect>
                    <DropShadowEffect Color="Black" 
                                      BlurRadius="10" 
                                      ShadowDepth="2" 
                                      Direction="270" 
                                      Opacity="0.3"/>
                </Image.Effect>
            </Image>
        </Border>
    </Grid>
</UserControl>