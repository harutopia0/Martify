<Window x:Class="Martify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Martify" 
        xmlns:uc="clr-namespace:Martify.Views"
        mc:Ignorable="d"
        xmlns:cv="clr-namespace:Martify.Converters"
        Title="Marity" 
        Height="720" Width="1080"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow">

    <Window.Resources>
        <cv:ImagePathConverter x:Key="ImgConverter"/>
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" 
                                   CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Border Background="{DynamicResource MainBackground}" 
                CornerRadius="30" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.RowSpan="2" CornerRadius="30,30,30,30">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#067FF8" Offset="0"/>
                                <GradientStop Color="#067FF8" Offset="0.35"/>
                                <GradientStop Color="#FF3654F1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" 
                                              BlurRadius="20" 
                                              ShadowDepth="5" 
                                              Direction="0" 
                                              Opacity="0.3"/>
                        </Border.Effect>
                    </Border>


                    <Grid Grid.Row="0" Margin="0" 
                          Width="200" Height="200"
                          HorizontalAlignment="Center">

                        <StackPanel Orientation="Vertical">
                            <Grid Width="120" Height="120">
                                <Ellipse Width="120" Height="120" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Ellipse.Fill>
                                        <ImageBrush Stretch="UniformToFill">
                                            <ImageBrush.ImageSource>
                                                <Binding Path="ImagePath" 
                                                         Converter="{StaticResource ImgConverter}"
                                                         TargetNullValue="{StaticResource Anonymous}"
                                                         FallbackValue="{StaticResource Anonymous}"/>
                                            </ImageBrush.ImageSource>
                                        </ImageBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding FullName}"
                                           FontSize="20"
                                           Foreground="White" 
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center"
                                           Margin="0,7.5,0,0" FontFamily="Roboto"/>

                                <TextBlock Text="{Binding Email}"
                                           Margin="0,0,0,0"
                                           FontSize="12"
                                           Foreground="White"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Center" FontFamily="Roboto Medium"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="1">
                        <uc:SidePanel Margin="0,-25,0,0" HorizontalAlignment="Left"/>
                    </Grid>
                </Grid>


                <Grid Grid.Column="1">
                    <ContentControl x:Name="Pages" IsTabStop="False"
                                    Content="{Binding Navigation.CurrentView}"></ContentControl>
                </Grid>

            </Grid>

         </Border>

        <uc:WindowControl/>
    </Grid>
</Window>