<Window x:Class="Martify.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Martify"
        xmlns:uc="clr-namespace:Martify.UserCtrl"
        mc:Ignorable="d"
        Title="Martify"
        Height="450" Width="800"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Grid>
        <!--FocusSink Border-->
        <Button x:Name="FocusSink"
                Width="0"
                Height="0"
                Focusable="True"
                IsTabStop="False"
                Background="Transparent"
                Opacity="0" />

        <Grid Margin="7.5">
            <!--Login Form-->
            <Border Background="White" CornerRadius="20">
                <Grid>

                    <!--Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1.5*" />
                    </Grid.ColumnDefinitions>

                    <!--Login-->
                    <Grid Grid.Column="0" MouseLeftButtonDown="moveFocustoFocusSink">

                        <!--Martify Logo && Name-->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="50,25,0,0">

                            <!--Marify Logo-->
                            <Image Source="{StaticResource Martify}"
                                   Width="60"
                                   Height="60" />

                            <!--Marify Label Animation/Trigger-->
                            <Label FontFamily="{StaticResource PasseroOne}"
                                   FontSize="42"
                                   FontWeight="Bold"
                                   VerticalContentAlignment="Center"
                                   Foreground="Black"
                                   Margin="10,0,0,0">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Setter Property="Content" Value="Martify"></Setter>
                                        <Style.Triggers>
                                            <EventTrigger RoutedEvent="Window.Loaded">
                                                <BeginStoryboard Storyboard="{StaticResource MartifyAnimation}"></BeginStoryboard>
                                            </EventTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>
                        </StackPanel>

                        <!--Login Panel-->
                        <Grid VerticalAlignment="Center"
                              HorizontalAlignment="Center" Margin="0,65,0,0" Width="250">

                            <!--Blur Background-->
                            <Image Source="{StaticResource BlurImage}"
                                   Stretch="Fill"
                                   Width="248"
                                   Height="273" />

                            <!--Blur Overlay-->
                            <Border CornerRadius="20"
                                    BorderThickness="2"
                                    Focusable="False"
                                    BorderBrush="Transparent">
                                <Border Background="Gray"
                                        Opacity="0.085"
                                        Focusable="False"
                                        CornerRadius="17" />
                            </Border>

                            <!--Login Panel Grid-->
                            <Grid Margin="20,15,20,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Label Grid.Row="0"
                                       Content="Login"
                                       Margin="-2,0,0,0"
                                       FontFamily="{StaticResource BungeeSpice}"
                                       FontSize="35"
                                       FontWeight="Bold"
                                       VerticalContentAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                    <Label.Foreground>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF7179D9"/>
                                            <GradientStop Color="#FF95F0EC" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Label.Foreground>

                                </Label>

                                <!--Username Section-->
                                <Label Grid.Row="1"
                                       Content="Username or email address"
                                       FontFamily="{StaticResource YanoneKaffeesatz}"
                                       FontSize="16"
                                       Foreground="#FF5A6364"
                                       Margin="0,-2.5,0,0" />
                                <Grid Grid.Row="2" Margin="0,2,0,0">
                                    <Border x:Name="usernameBorder"
                                            Focusable="False"
                                            BorderThickness="1"
                                            BorderBrush="Gray"
                                            CornerRadius="8"
                                            Background="AliceBlue">
                                        <Grid>
                                            <TextBox x:Name="usernameTextBox"
                                                     VerticalContentAlignment="Center"
                                                     Padding="30,0,5,0"
                                                     Height="30"
                                                     FontFamily="Arial"
                                                     FontSize="12"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Foreground="Black" />

                                            <Image Source="{StaticResource UserIcon}"
                                                   HorizontalAlignment="Left"
                                                   Width="20"
                                                   Height="20"
                                                   Margin="5,0,0,0"
                                                   IsHitTestVisible="False" />
                                        </Grid>
                                    </Border>
                                    <Border x:Name="usernameFocusBorder"
                                            BorderThickness="2"
                                            CornerRadius="10"
                                            IsHitTestVisible="False"
                                            Focusable="False"
                                            Margin="-1"
                                            BorderBrush="#4b91cf">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"></Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=usernameTextBox, Path=IsFocused}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>

                                <!--Password Section-->
                                <Label Grid.Row="3"
                                       Content="Password"
                                       FontFamily="{StaticResource YanoneKaffeesatz}"
                                       FontSize="16"
                                       Foreground="#FF5A6364"
                                       Margin="0,10,0,0" />
                                <Grid Grid.Row="4" Margin="0,2,0,0">
                                    <Border x:Name="passwordBorder"
                                            Focusable="False"
                                            BorderThickness="1"
                                            BorderBrush="Gray"
                                            CornerRadius="8"
                                            Background="AliceBlue">
                                        <Grid>
                                            <TextBox x:Name="showPasswordTextBox"
                                                     VerticalContentAlignment="Center"
                                                     Padding="30,0,35,0"
                                                     Height="30"
                                                     FontFamily="Arial"
                                                     FontSize="12"
                                                     BorderThickness="0"
                                                     Background="Transparent"
                                                     Foreground="Black"
                                                     Visibility="Collapsed" />

                                            <PasswordBox x:Name="passwordBox"
                                                         VerticalContentAlignment="Center"
                                                         Padding="30,0,35,0"
                                                         Height="30"
                                                         FontFamily="Arial"
                                                         FontSize="8"
                                                         BorderThickness="0"
                                                         Background="Transparent"
                                                         Foreground="Black" />

                                            <Image Source="{StaticResource KeyIcon}"
                                                   HorizontalAlignment="Left"
                                                   Width="20"
                                                   Height="20"
                                                   Margin="5,0,0,0"
                                                   IsHitTestVisible="False" />

                                            <Image x:Name="eyeIcon"
                                                   Source="{StaticResource EyeClosed}"
                                                   HorizontalAlignment="Right"
                                                   Width="20"
                                                   Height="20"
                                                   Margin="0,0,8,0"
                                                   Cursor="Hand"
                                                   Focusable="False"
                                                   MouseLeftButtonDown="showAndHidePasswordClick" />
                                        </Grid>
                                    </Border>
                                    <Border x:Name="passwordFocusBorder"
                                            BorderThickness="2"
                                            CornerRadius="10" 
                                            IsHitTestVisible="False"
                                            Focusable="False"
                                            Margin="-1"
                                            BorderBrush="#4b91cf">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=passwordBox, Path=IsFocused}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=showPasswordTextBox, Path=IsFocused}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>

                                <Grid Grid.Row="5" Margin="0,20,0,0" Height="35">
                                    <Button IsDefault="True"
                                            Content="Log In"
                                            FontSize="15"
                                            Margin="-1"
                                            Foreground="White"
                                            FontFamily="Times New Roman"
                                            BorderBrush="LightGray"
                                            BorderThickness="1"
                                            FocusVisualStyle="{x:Null}"
                                            Click="loginButtonClick">
                                        <Button.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="Black"/>
                                                <GradientStop Color="#FF0A0A0A" Offset="1"/>
                                                <GradientStop Color="#FF454545" Offset="0.002"/>
                                            </LinearGradientBrush>
                                        </Button.Background>
                                        <Button.Template>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="templateBorder"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsFocused" Value="True">
                                                        <Setter TargetName="templateBorder" Property="BorderBrush" Value="DodgerBlue" />
                                                        <Setter TargetName="templateBorder" Property="BorderThickness" Value="2" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--Banner Grid-->
                    <Grid Grid.Column="1" MouseLeftButtonDown="moveFocustoFocusSink">
                        <!--Banner-->
                        <Image Source="/Resources/images/login-banner.png" Margin="20,30,10,5" />


                    </Grid>
                </Grid>
            </Border>
        </Grid>


        <uc:GradientBorderUC></uc:GradientBorderUC>
        <uc:WindowControlUC></uc:WindowControlUC>
    </Grid>
</Window>