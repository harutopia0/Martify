<UserControl x:Class="Martify.Views.SidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify"
             mc:Ignorable="d"
             Background="Transparent"
             Name="ucPanel">
    <UserControl.Resources>

        <Style x:Key="SidePanelStyle"
           TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                            Height="40"
                            Background="Transparent">

                            <Grid>

                                <Image x:Name="SidePanel_Menu_Image"
                                       Source="{TemplateBinding Image.Source}"
                                       Stretch="Uniform"
                                       Margin="0,0,12,0"
                                       Width="25" Height="25"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />

                                <Grid x:Name="TextBlock_Panel"
                                      Background="Transparent"
                                      Height="35"
                                      Width="150"
                                      Margin="0,0,50,0"
                                      HorizontalAlignment="Right">

                                    <TextBlock Text="{TemplateBinding TextBlock.Text}"
                                               FontFamily="{StaticResource Rubik}"
                                               FontSize="17"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"
                                               Margin="10,0,0,0"
                                               Foreground="#FFFFFF" />
                                </Grid>

                                <Grid x:Name="Sliding_UpperCase_Panel"
                                      Height="35"
                                      Width="0"
                                      Background="Transparent"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0">


                                    <Border x:Name="Highlighter"
                                            Height="30"
                                            Width="300"
                                            Background="#FF679BCB"
                                            CornerRadius="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0,0,15,0" />
                                    <Ellipse Width="30"
                                             Height="30"
                                             Fill="#FF679BCB"
                                             HorizontalAlignment="Right"
                                             VerticalAlignment="Center" />

                                    <TextBlock x:Name="UpperCase_Text"
                                               Text="{Binding Content, 
                                                              RelativeSource={RelativeSource FindAncestor,
                                                              AncestorType={x:Type RadioButton}}}"
                                               FontFamily="{StaticResource Rubik}"
                                               FontSize="17"
                                               Foreground="#FFFFFF"
                                               Margin="20,0,0,0"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center">

                                    </TextBlock>
                                </Grid>
                            </Grid>

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="RadioButton.IsMouseOver"
                                     Value="true">

                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="Transparent" />

                                <Setter TargetName="SidePanel_Menu_Image"
                                        Property="Source"
                                        Value="{Binding Tag, 
                                                        RelativeSource={RelativeSource FindAncestor,
                                                        AncestorType={x:Type RadioButton}}}" />

                            </Trigger>

                            <Trigger Property="RadioButton.IsChecked"
                                     Value="true">

                                <Setter Property="Background"
                                        TargetName="border"
                                        Value="Transparent" />

                                <Setter Property="Background"
                                        TargetName="Highlighter"
                                        Value="#FFFFFF" />

                                <Setter Property="Foreground"
                                        TargetName="UpperCase_Text"
                                        Value="Black" />

                                <Setter Property="FontSize"
                                        TargetName="UpperCase_Text"
                                        Value="17" />

                                <Setter TargetName="SidePanel_Menu_Image"
                                        Property="Source"
                                        Value="{Binding DataContext, 
                                                        RelativeSource={RelativeSource FindAncestor,
                                                        AncestorType={x:Type RadioButton}}}" />

                            </Trigger>

                            <MultiTrigger>

                                <MultiTrigger.Conditions>
                                    <Condition Property="RadioButton.IsMouseOver"
                                               Value="True" />
                                </MultiTrigger.Conditions>

                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard x:Name="Start_Uppercase_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             DecelerationRatio="0.6"
                                                             From="0"
                                                             To="160"
                                                             Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <RemoveStoryboard BeginStoryboardName="Stop_Indicator" />
                                </MultiTrigger.EnterActions>

                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard x:Name="Stop_Uppercase_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             DecelerationRatio="0.6"
                                                             From="160"
                                                             To="0"
                                                             Duration="0:0:0.75" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <RemoveStoryboard BeginStoryboardName="Release_Indicator" />
                                </MultiTrigger.ExitActions>

                            </MultiTrigger>

                            <MultiTrigger>
                                <MultiTrigger.Conditions>

                                    <Condition Property="RadioButton.IsChecked"
                                               Value="True" />

                                </MultiTrigger.Conditions>

                                <MultiTrigger.EnterActions>
                                    <BeginStoryboard x:Name="Lock_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="160"
                                                             To="165"
                                                             Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>

                                <MultiTrigger.ExitActions>
                                    <BeginStoryboard x:Name="Release_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="165"
                                                             To="160"
                                                             Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                    <BeginStoryboard x:Name="Stop_Indicator">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Sliding_UpperCase_Panel"
                                                             Storyboard.TargetProperty="Width"
                                                             From="160"
                                                             To="0"
                                                             BeginTime="0:0:0.15"
                                                             Duration="0:0:0.5" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>

                            </MultiTrigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidePanelListBoxStyle"
               TargetType="{x:Type ListBox}">

            <Setter Property="VerticalAlignment"
                    Value="Top" />

            <Setter Property="SelectionMode"
                    Value="Single" />

            <Setter Property="Cursor"
                    Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border>

                            <ScrollViewer Focusable="False"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Disabled">

                                <ItemsPresenter />

                            </ScrollViewer>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid>
        <StackPanel>
            <ListBox x:Name="SidePanel_ListBox" Style="{StaticResource SidePanelListBoxStyle}">

                <ListBox.Resources>

                    <Style x:Key="dashboard_listboxitem_style"
                           TargetType="ListBoxItem">

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.DashboardCommand, ElementName=ucPanel}">
                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Dashboard" />

                                                <Setter Property="Content"
                                                        Value="DASHBOARD" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource DashboardNormal}" />
                                                
                                                <Setter Property="Tag"
                                                        Value="{StaticResource DashboardHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource DashboardActive}" />

                                            </Style>
                                        </RadioButton.Style>
                                    </RadioButton>

                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="products_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup"
                                                 Command="{Binding DataContext.Navigation.ProductsCommand, ElementName=ucPanel}">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Products" />
                                                <Setter Property="Content"
                                                        Value="PRODUCTS" />


                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource ProductsNormal}" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource ProductsHover}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource ProductsActive}" />
                                                
                                            </Style>

                                        </RadioButton.Style>

                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="customer_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Customer" />
                                                <Setter Property="Content"
                                                        Value="CUSTOMER" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource User}" />

                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource Martify}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource CloseProgram}" />
                                            </Style>

                                        </RadioButton.Style>

                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="analytics_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Analytics" />
                                                <Setter Property="Content"
                                                        Value="ANALYTICS" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource User}" />

                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource Martify}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource CloseProgram}" />
                                            </Style>

                                        </RadioButton.Style>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <Style x:Key="settings_listboxitem_style"
                           TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <RadioButton IsChecked="{Binding Path=IsSelected, 
                                                                       RelativeSource={RelativeSource TemplatedParent}}"
                                                 GroupName="SidePanelGroup">

                                        <RadioButton.Style>

                                            <Style TargetType="RadioButton"
                                                   BasedOn="{StaticResource SidePanelStyle}">

                                                <Setter Property="TextBlock.Text"
                                                        Value="Settings" />
                                                <Setter Property="Content"
                                                        Value="SETTINGS" />

                                                <Setter Property="Tag"
                                                        Value="{StaticResource User}" />

                                                <Setter Property="Image.Source"
                                                        Value="{StaticResource Martify}" />

                                                <Setter Property="DataContext"
                                                        Value="{StaticResource CloseProgram}" />
                                            </Style>
                                        </RadioButton.Style>
                                    </RadioButton>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.Resources>

                <ListBox.ItemsPanel>

                    <ItemsPanelTemplate>

                        <Grid HorizontalAlignment="Right">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="210" />
                                <ColumnDefinition Width="0" />

                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>

                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />

                            </Grid.RowDefinitions>

                        </Grid>

                    </ItemsPanelTemplate>

                </ListBox.ItemsPanel>

                <ListBoxItem x:Name="dashboard_sidepanel_listboxitem"
                             Grid.Row="0"
                             Style="{StaticResource dashboard_listboxitem_style}"
                             IsSelected="True"/>

                <ListBoxItem x:Name="products_sidepanel_listboxitem"
                             Grid.Row="1"
                             Style="{StaticResource products_listboxitem_style}" />

                <ListBoxItem x:Name="customer_sidepanel_listboxitem"
                             Grid.Row="2"
                             Style="{StaticResource customer_listboxitem_style}" />

                <ListBoxItem x:Name="analytics_sidepanel_listboxitem"
                             Grid.Row="3"
                             Style="{StaticResource analytics_listboxitem_style}" />

                <ListBoxItem x:Name="settings_sidepanel_listboxitem"
                             Grid.Row="4"
                             Style="{StaticResource settings_listboxitem_style}" />
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>