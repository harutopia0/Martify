                                        <materialDesign:PackIcon Kind="BabyBottle"
                                                                 Width="30"
                                                                 Height="30"
                                                                 Foreground="#FF6F00"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Sữa TH True Milk"
