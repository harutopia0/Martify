<Window x:Class="Martify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Martify"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1080"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Storyboard x:Key="GradientRotateStoryboard"
                    RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AnimatedBorderBrush"
                             Storyboard.TargetProperty="Transform.Children[0].Angle"
                             From="0" To="360" Duration="0:0:5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!--FocusSink Border-->
        <Button x:Name="FocusSink"
                Width="0"
                Height="0"
                Focusable="True"
                IsTabStop="False"
                Background="Transparent"
                Opacity="0" />

        <Border CornerRadius="26" BorderThickness="8">
            <!--Gradient Border Trigger-->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource GradientRotateStoryboard}" />
                </EventTrigger>
            </Border.Triggers>

            <!--Border Brush-->
            <Border.BorderBrush>
                <LinearGradientBrush x:Name="AnimatedBorderBrush"
                                     StartPoint="-1,0.5"
                                     EndPoint="0.5,1">
                    <GradientStop Color="#FF71FBF8" Offset="0.00" />
                    <GradientStop Color="LightBlue" Offset="0.30" />
                    <GradientStop Color="#FF71FBF8" Offset="0.55" />
                    <GradientStop Color="AliceBlue" Offset="0.80" />
                    <GradientStop Color="Gray" Offset="1.00" />
                    <LinearGradientBrush.Transform>
                        <TransformGroup>
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                        </TransformGroup>
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <!--Login Form-->
            <Border Background="White" CornerRadius="20">
                <Grid>

                    <!--Definitions-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--Login-->
                    <Grid Grid.Column="0">

                    </Grid>

                    <!--Banner Grid-->
                    <Grid Grid.Column="1">

                        <!--Close Program Button-->
                        <Grid HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0"
                              Width="50"
                              Height="50">
                            <Image Source="resources/images/x_icon.png"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="CloseProgram_Click">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Width" Value="25" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Width" Value="30" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Grid>
                    </Grid>

                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
