<UserControl x:Class="Martify.Views.ProductSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Martify.Views"
             mc:Ignorable="d"
             Background="Transparent"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             xmlns:uc="clr-namespace:Martify.Views"
             xmlns:cv="clr-namespace:Martify.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="720"
             d:DesignWidth="864"
             Style="{StaticResource Page_CinematicFocus_Style}"
             d:Style="{x:Null}"
             Unloaded="UserControl_Unloaded">

    <UserControl.DataContext>
        <vm:ProductSelectionVM />
    </UserControl.DataContext>

    <UserControl.Resources>
        <cv:ImagePathConverter x:Key="ImgConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ProductItemButtonStyle"
               TargetType="Button">
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderBrush"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding"
                    Value="0"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding StockQuantity}"
                             Value="0">
                    <Setter Property="IsEnabled"
                            Value="False"/>
                    <Setter Property="Opacity"
                            Value="0.5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Background="{DynamicResource CardBackground}"
                            CornerRadius="10"
                            Height="40"
                            Margin="0,0,5,0"
                            Padding="10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <materialDesign:PackIcon Kind="Magnify"
                                                     Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center"
                                                     Foreground="{DynamicResource SecondaryText}"/>
                            <TextBox Grid.Column="1"
                                     Margin="5,0,0,0"
                                     materialDesign:HintAssist.Hint="Tìm kiếm..."
                                     materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                     BorderThickness="0"
                                     VerticalAlignment="Center"
                                     FontSize="14"
                                     Foreground="{DynamicResource PrimaryText}"
                                     Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                    </Border>

                    <ComboBox Grid.Column="1"
                              Height="40"
                              Margin="5,0,5,0"
                              ItemsSource="{Binding CategoryList}"
                              SelectedItem="{Binding SelectedCategory}"
                              DisplayMemberPath="CategoryName"
                              materialDesign:HintAssist.Hint="Loại SP"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Background="{DynamicResource CardBackground}"
                              Foreground="{DynamicResource PrimaryText}"
                              Padding="10,0"/>

                    <TextBox Grid.Column="2"
                             Height="40"
                             Margin="5,0,5,0"
                             materialDesign:HintAssist.Hint="Giá từ"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Background="{DynamicResource CardBackground}"
                             Foreground="{DynamicResource PrimaryText}"
                             Text="{Binding PriceFrom, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,0"
                             VerticalContentAlignment="Center"/>

                    <TextBlock Grid.Column="3"
                               Text="-"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SecondaryText}"/>

                    <TextBox Grid.Column="4"
                             Height="40"
                             Margin="5,0,5,0"
                             materialDesign:HintAssist.Hint="Giá đến"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Background="{DynamicResource CardBackground}"
                             Foreground="{DynamicResource PrimaryText}"
                             Text="{Binding PriceTo, UpdateSourceTrigger=PropertyChanged}"
                             Padding="10,0"
                             VerticalContentAlignment="Center"/>

                    <Button Grid.Column="5"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Xóa bộ lọc"
                            Height="45"
                            Width="45"
                            Command="{Binding ClearFilterCommand}">
                        <materialDesign:PackIcon Kind="FilterOff"
                                                 Foreground="Red" />
                    </Button>

                    <Button Grid.Column="6"
                            Style="{StaticResource MaterialDesignToolButton}"
                            ToolTip="Quét mã QR (Bật/Tắt Camera)"
                            Height="45"
                            Width="45"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding ToggleCameraCommand}">
                        <materialDesign:PackIcon Kind="QrcodeScan"
                                                 Foreground="#067FF8" />
                    </Button>
                </Grid>

                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              Margin="10">
                    <ItemsControl ItemsSource="{Binding ProductList}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ProductItemButtonStyle}"
                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Nhấn để thêm vào giỏ"
                                        Width="175"
                                        Height="250">
                                    <Border Background="{DynamicResource CardBackground}"
                                            CornerRadius="15"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="175"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                                   Source="{Binding ImagePath, Converter={StaticResource ImgConverter}, TargetNullValue={StaticResource DefaultProduct}, FallbackValue={StaticResource DefaultProduct}}"
                                                   Stretch="UniformToFill"
                                                   Margin="10,10,10,0"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>

                                            <StackPanel Grid.Row="1"
                                                        Margin="10"
                                                        VerticalAlignment="Bottom">
                                                <TextBlock Text="{Binding ProductName}"
                                                           FontWeight="Bold"
                                                           FontSize="12"
                                                           TextWrapping="NoWrap"
                                                           MaxHeight="40"
                                                           TextTrimming="CharacterEllipsis"
                                                           Foreground="{DynamicResource PrimaryText}"/>
                                                <TextBlock Text="{Binding ProductID}"
                                                           FontSize="11"
                                                           Foreground="{DynamicResource SecondaryText}"/>

                                                <Grid Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N0} VND}"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               Foreground="#4CAF50"
                                                               HorizontalAlignment="Left"
                                                               VerticalAlignment="Center"/>

                                                    <TextBlock FontSize="12"
                                                               HorizontalAlignment="Right"
                                                               VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground"
                                                                        Value="{DynamicResource SecondaryText}"/>
                                                                <Setter Property="Text"
                                                                        Value="{Binding StockQuantity, StringFormat=SL: {0}}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding StockQuantity}"
                                                                                 Value="0">
                                                                        <Setter Property="Text"
                                                                                Value="Đã hết"/>
                                                                        <Setter Property="Foreground"
                                                                                Value="Red"/>
                                                                        <Setter Property="FontWeight"
                                                                                Value="Bold"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="1"
                        Background="{DynamicResource CardBackground}"
                        CornerRadius="15"
                        Visibility="{Binding IsCameraOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Panel.ZIndex="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Background="{DynamicResource ItemBackground}"
                                CornerRadius="10"
                                Margin="20,20,20,5"
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Kind="Camera"
                                                         VerticalAlignment="Center"
                                                         Foreground="#067FF8"
                                                         Margin="0,0,10,0"/>

                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding Cameras}"
                                          SelectedItem="{Binding SelectedCamera}"
                                          DisplayMemberPath="Name"
                                          materialDesign:HintAssist.IsFloating="False"
                                          Foreground="{DynamicResource PrimaryText}"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          FontSize="13"
                                          Height="35"
                                          Padding="8,5"/>

                                <Button Grid.Column="2"
                                        Command="{Binding RefreshCamerasCommand}"
                                        Style="{StaticResource MaterialDesignIconButton}"
                                        ToolTip="Làm mới danh sách"
                                        Margin="5,0,0,0">
                                    <materialDesign:PackIcon Kind="Refresh"
                                                             Foreground="{DynamicResource SecondaryText}"/>
                                </Button>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1"
                                Margin="20"
                                BorderBrush="#067FF8"
                                BorderThickness="2"
                                CornerRadius="10"
                                Background="Black">
                            <Grid>
                                <Image Source="{Binding CameraFrame}"
                                       Stretch="Uniform"/>
                                <Border Height="2"
                                        Background="Red"
                                        VerticalAlignment="Top">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever"
                                                            AutoReverse="True">
                                                    <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                        From="0,37,0,0"
                                                                        To="0,354,0,0"
                                                                        Duration="0:0:1.5"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                </Border>
                            </Grid>
                        </Border>

                        <StackPanel Grid.Row="2"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ScanStatus}"
                                       Foreground="{DynamicResource PrimaryText}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <Button Content="Đóng Camera"
                                    Command="{Binding ToggleCameraCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#F44336"
                                    BorderBrush="Transparent"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Column="1"
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="20"
                    Padding="12.5"
                    Margin="0,5,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="10"
                                      Opacity="0.2"
                                      ShadowDepth="2"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="0,0,0,10">
                        <TextBlock Text="Sản phẩm"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"/>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Command="{Binding ToggleHeldListCommand}"
                                    ToolTip="Đơn hàng treo"
                                    Width="40"
                                    Height="40"
                                    Margin="0,0,5,0">
                                <materialDesign:PackIcon Kind="ClipboardList"
                                                         Foreground="#FF9800"
                                                         VerticalAlignment="Center"/>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Command="{Binding ClearCartCommand}"
                                    ToolTip="Xóa hết"
                                    Width="40"
                                    Height="40">
                                <materialDesign:PackIcon Kind="DeleteSweep"
                                                         Foreground="Red"
                                                         VerticalAlignment="Center"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <ListView Grid.Row="1"
                              ItemsSource="{Binding CartList}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              HorizontalContentAlignment="Stretch">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Background"
                                        Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                    BorderThickness="0,0,0,1"
                                                    Padding="5">
                                                <ContentPresenter/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="{Binding Product.ProductName}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource PrimaryText}"/>

                                        <StackPanel Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    Margin="0,5,0,0"
                                                    VerticalAlignment="Bottom">
                                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                    Width="20"
                                                    Height="20"
                                                    Padding="0"
                                                    Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Minus"
                                                                         Width="12"
                                                                         Height="12"
                                                                         Foreground="{DynamicResource SecondaryText}"/>
                                            </Button>

                                            <TextBlock Text="{Binding Quantity}"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryText}"
                                                       VerticalAlignment="Center"
                                                       Margin="10,0"/>

                                            <Button Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                    Width="20"
                                                    Height="20"
                                                    Padding="0"
                                                    Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="12"
                                                                         Height="12"
                                                                         Foreground="{DynamicResource SecondaryText}"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition Height="30"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    VerticalAlignment="Bottom">
                                            <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0}}"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryText}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>
                                            <Button Style="{StaticResource MaterialDesignIconButton}"
                                                    Height="20"
                                                    Width="20"
                                                    Command="{Binding DataContext.RemoveFromCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}">
                                                <materialDesign:PackIcon Kind="Close"
                                                                         Width="16"
                                                                         Height="16"
                                                                         Foreground="Red"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackPanel Grid.Row="2"
                                Margin="0,15,0,0">
                        <Grid Margin="0,0,0,15">
                            <TextBlock Text="Tổng:"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource PrimaryText}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding GrandTotal, StringFormat={}{0:N0} VND}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Command="{Binding ParkOrderCommand}"
                                    ToolTip="Tạm giữ đơn hàng"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    BorderBrush="#FF9800"
                                    Foreground="#FF9800"
                                    Height="50"
                                    Width="50"
                                    Margin="0,0,10,0"
                                    Padding="0">
                                <materialDesign:PackIcon Kind="Pause"
                                                         Width="30"
                                                         Height="30"/>
                            </Button>

                            <Button Grid.Column="1"
                                    Command="{Binding CheckoutCommand}"
                                    Content="XUẤT HÓA ĐƠN"
                                    Height="50"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Background="#2196F3"
                                    BorderBrush="{x:Null}"/>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.RowSpan="3"
                          Background="{DynamicResource CardBackground}"
                          Visibility="{Binding IsHeldListVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0"
                                   Margin="0,0,0,10"
                                   LastChildFill="False">
                            <TextBlock Text="Đơn đang giữ"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Foreground="#FF9800"/>
                            <Button DockPanel.Dock="Right"
                                    Command="{Binding ToggleHeldListCommand}"
                                    Style="{StaticResource MaterialDesignIconForegroundButton}"
                                    Height="40"
                                    Width="40"
                                    Margin="0,0,5,0">
                                <materialDesign:PackIcon Kind="Close"/>
                            </Button>
                        </DockPanel>

                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Hidden">
                            <ItemsControl ItemsSource="{Binding HeldOrders}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource MainBackground}"
                                                CornerRadius="5"
                                                Margin="0,0,0,10"
                                                Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <TextBlock Text="{Binding DisplayInfo}"
                                                               FontWeight="Bold"
                                                               Foreground="{DynamicResource PrimaryText}"/>
                                                    <TextBlock Text="{Binding DisplayTotal, StringFormat={}{0} VND}"
                                                               Foreground="#4CAF50"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1"
                                                            Orientation="Horizontal">
                                                    <Button Command="{Binding DataContext.RestoreHeldOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                                            Height="30"
                                                            Padding="10,0"
                                                            Content="Lấy lại"
                                                            Margin="0,0,5,0"/>
                                                    <Button Command="{Binding DataContext.DeleteHeldOrderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignIconForegroundButton}"
                                                            Height="30"
                                                            Width="30">
                                                        <materialDesign:PackIcon Kind="TrashCan"
                                                                                 Foreground="Red"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>