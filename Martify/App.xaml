<Application x:Class="Martify.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Martify"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/XAML/MaterialDesignRes.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/TriggerRes.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/FontRes.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/MainResource.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/ImageRes.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/ViewRes.xaml"/>
                <ResourceDictionary Source="/Resources/XAML/StyleRes.xaml"/>
                <ResourceDictionary Source="Resources/XAML/LightTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
