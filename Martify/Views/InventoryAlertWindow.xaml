<Window x:Class="Martify.Views.InventoryAlertWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
mc:Ignorable="d"
Title="Inventory Alert Details" 
Height="650" 
Width="850"
WindowStartupLocation="CenterOwner"
ResizeMode="NoResize"
WindowStyle="None"
AllowsTransparency="True"
Background="Transparent">

    <Window.Resources>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="RowBackground" Value="{DynamicResource ItemBackground}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource CardBackground}"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#067FF8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Roboto Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontFamily" Value="Roboto"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource CardBackground}" 
            CornerRadius="20"
            Margin="30">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              BlurRadius="25"
                              ShadowDepth="8"
                              Direction="270"
                              Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#067FF8"
                    CornerRadius="20,20,0,0"
                    Padding="25,20">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Width="36" 
                                             Height="36" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,15,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Kind" Value="TrendingDown"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                        <Setter Property="Kind" Value="PackageVariantClosed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock FontSize="24" 
                                   FontFamily="Roboto Bold"
                                   Foreground="White">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Sản Phẩm Sắp Hết Hàng"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                            <Setter Property="Text" Value="Sản Phẩm Hết Hàng"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock FontSize="13" 
                                   FontFamily="Roboto"
                                   Foreground="White"
                                   Opacity="0.85"
                                   Margin="0,3,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Sản phẩm có số lượng &lt;= 10"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding AlertType}" Value="OutOfStock">
                                            <Setter Property="Text" Value="San pham co so luong ton kho = 0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Search Bar -->
            <Border Grid.Row="1" 
                    Background="#F8F9FA"
                    CornerRadius="18"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Height="36"
                    Margin="15,8,15,4"
                    VerticalAlignment="Center">
                <Grid>
                    <materialDesign:PackIcon Kind="Magnify"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"
                                             Width="18" 
                                             Height="18" 
                                             Margin="14,0,0,0"
                                             Foreground="#9E9E9E"/>

                    <TextBox materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm theo tên, mã..."
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             Height="36"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="40,0,15,0"
                             FontSize="13"
                             Foreground="{DynamicResource PrimaryText}"/>
                </Grid>
            </Border>

            <!-- Filter and Action Buttons -->
            <Grid Grid.Row="2" Margin="15,6,15,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Filters -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,10,0">
                    <ComboBox materialDesign:HintAssist.Hint="Danh mục"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Height="32"
                              MinWidth="120"
                              Padding="8,4"
                              FontSize="12"
                              Background="{DynamicResource CardBackground}"
                              Foreground="{DynamicResource PrimaryText}"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"
                              Margin="0,0,8,0"/>

                    <ComboBox materialDesign:HintAssist.Hint="Đơn vị"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Height="32"
                              MinWidth="100"
                              Padding="8,4"
                              FontSize="12"
                              Background="{DynamicResource CardBackground}"
                              Foreground="{DynamicResource PrimaryText}"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"/>

                    <!-- Clear Filter Button -->
                    <Button Style="{StaticResource MaterialDesignIconButton}" 
                            ToolTip="Xóa bộ lọc" 
                            Height="32" 
                            Width="32">
                        <materialDesign:PackIcon Kind="FilterOff" 
                                                 Foreground="#F44336" 
                                                 Height="18" 
                                                 Width="18"/>
                    </Button>

                    <TextBlock Margin="8,0,0,0" VerticalAlignment="Center">
                        <Run Text="Tổng:" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                        <Run Text="{Binding Products.Count, Mode=OneWay}" Foreground="#2196F3" FontWeight="SemiBold" FontSize="12"/>
                        <Run Text="sản phẩm" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                    </TextBlock>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Import Button -->
                    <Button Margin="0,0,8,0"
                            Height="32"
                            Padding="12,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="White"
                            Foreground="#FF6B35"
                            BorderBrush="#FF6B35"
                            BorderThickness="1.5"
                            Command="{Binding RestockCommand}"
                            ToolTip="Nhập hàng vào kho">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TrayArrowDown" 
                                                     Width="16" 
                                                     Height="16" 
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,6,0"/>
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="12"
                                       FontWeight="SemiBold">
                                <Run Text="Nhập hàng"/>
                                <Run Text="("/><Run Text="{Binding SelectedCount, Mode=OneWay}"/><Run Text=")"/>
                            </TextBlock>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- DataGrid -->
            <Border Grid.Row="3" 
                    Background="{DynamicResource CardBackground}"
                    CornerRadius="12"
                    Margin="15,0,15,8"
                    Padding="3">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.06" Color="#000000"/>
                </Border.Effect>

                <DataGrid x:Name="productsDataGrid"
                          Background="Transparent"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeColumns="False"
                          CanUserSortColumns="True"
                          IsReadOnly="False"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          ItemsSource="{Binding Products}"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          RowHeight="42"
                          ColumnHeaderHeight="36"
                          BorderThickness="0"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          EnableColumnVirtualization="True"
                          EnableRowVirtualization="True">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="Margin" Value="4,2"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F7FA"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">    
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding Product.StockQuantity}" Value="0">
                                    <Setter Property="Opacity" Value="0.5"/>
                                    <Setter Property="ToolTip" Value="Sản phẩm đã hết hàng"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}" 
                               BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>

                        <Style TargetType="{x:Type DataGridCell}" 
                               BasedOn="{StaticResource MaterialDesignDataGridCell}">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="8,8"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <!-- Checkbox Column -->
                        <DataGridTemplateColumn Width="50" MinWidth="50" CanUserSort="False">
                            <DataGridTemplateColumn.HeaderTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=Window}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  ToolTip="Chọn tất cả"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.HeaderTemplate>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Product Name with Image -->
                        <DataGridTemplateColumn Header="SẢN PHẨM" Width="1.3*" MinWidth="150" SortMemberPath="Product.ProductName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Product Image Placeholder -->
                                        <Border Grid.Column="0"
                                                Width="28" 
                                                Height="28"
                                                CornerRadius="6"
                                                Background="#F5F5F5"
                                                Margin="0,0,8,0">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.08"/>
                                            </Border.Effect>
                                        </Border>

                                        <!-- Product Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Product.ProductName}" 
                                                       FontSize="12" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryText}"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="150"
                                                       HorizontalAlignment="Left"/>
                                            <TextBlock Text="{Binding Product.ProductID}" 
                                                       FontSize="10" 
                                                       Foreground="{DynamicResource SecondaryText}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Category -->
                        <DataGridTemplateColumn Header="DANH MỤC" Width="1.2*" MinWidth="110" SortMemberPath="Product.Category.CategoryName">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#F0F4FF"
                                            CornerRadius="4"
                                            Padding="6,3"
                                            Height="26"
                                            MinWidth="70"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding Product.Category.CategoryName}"
                                                   MinWidth="60"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   Foreground="#5B7EF4"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Unit -->
                        <DataGridTextColumn Header="ĐVT" 
                                            Binding="{Binding Product.Unit}" 
                                            Width="65"
                                            SortMemberPath="Product.Unit">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Price -->
                        <DataGridTemplateColumn Header="GIÁ BÁN" Width="95" SortMemberPath="Product.Price">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock FontSize="11" FontWeight="Bold" Foreground="#2196F3" VerticalAlignment="Center">
                                            <Run Text="{Binding Product.Price, StringFormat='N0'}"/>
                                            <Run Text="₫" FontSize="11"/>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Stock -->
                        <DataGridTemplateColumn Header="TỒN KHO" Width="85" SortMemberPath="Product.StockQuantity">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="4" 
                                            Padding="6,3"
                                            Margin="2,0,0,0"
                                            HorizontalAlignment="Left">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#E8F5E9"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Product.StockQuantity}" Value="0">
                                                        <Setter Property="Background" Value="#FFEBEE"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="11" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Setter Property="Text" Value="{Binding Product.StockQuantity}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Product.StockQuantity}" Value="0">
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                            <Setter Property="Text" Value="Hết"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Actions -->
                        <DataGridTemplateColumn Header="THAO TÁC" Width="90" CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Chỉnh sửa"
                                                Width="22" Height="22"
                                                Margin="0,0,2,0">
                                            <materialDesign:PackIcon Kind="Pencil" 
                                                                     Width="14" 
                                                                     Height="14"
                                                                     Foreground="#2196F3"/>
                                        </Button>

                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                ToolTip="Xóa"
                                                Width="22" Height="22">
                                            <materialDesign:PackIcon Kind="Delete" 
                                                                     Width="14" 
                                                                     Height="14"
                                                                     Foreground="#F44336"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Footer with Close Button -->
            <Border Grid.Row="4" 
                    Background="{DynamicResource ItemBackground}" 
                    CornerRadius="0,0,20,20"
                    Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Info Text -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="InformationOutline"
                                                 Width="14"
                                                 Height="14"
                                                 Foreground="{DynamicResource SecondaryText}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,6,0"/>
                        <TextBlock Text="Nhấn vào sản phẩm để xem chi tiết"
                                   FontSize="11"
                                   FontFamily="Roboto"
                                   Foreground="{DynamicResource SecondaryText}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="CloseButton_Click"
                            Foreground="{DynamicResource SecondaryText}"
                            BorderBrush="{DynamicResource SecondaryText}"
                            Padding="12,4"
                            Height="28"
                            materialDesign:ButtonAssist.CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close"
                                                     Width="14"
                                                     Height="14"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,5,0"/>
                            <TextBlock Text="Đóng"
                                       FontSize="11"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
