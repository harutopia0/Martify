<Window x:Class="Martify.Views.ProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:cv="clr-namespace:Martify.Converters"
        Title="Chi tiết sản phẩm"
        Height="550"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <cv:ImagePathConverter x:Key="ImgConverter"/>

        <!-- Nâng cấp Style nút Lưu với animation nhẹ -->
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#BDBDBD"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="12"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsModified}" Value="True">
                    <Setter Property="Background" Value="#673AB7"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.8" To="1.0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Style cho các Icon Labels -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </Window.Resources>

    <!-- Border chính để tạo Shadow và Bo góc cho toàn bộ Window -->
    <Border Margin="15" Background="White" CornerRadius="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15" Color="Black"/>
        </Border.Effect>

        <Grid ClipToBounds="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="220"/>
                <!-- Header & Image -->
                <RowDefinition Height="*"/>
                <!-- Form Fields -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- 1. Header Area: Gradient Background -->
            <Border Grid.Row="0" CornerRadius="25,25,0,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#067FF8" Offset="0"/>
                        <GradientStop Color="#067FF8" Offset="0.35"/>
                        <GradientStop Color="#FF3654F1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White" Margin="10" Click="CancelButton_Click"
                        Command="{Binding CloseWindowCommand}">

                        <materialDesign:PackIcon Kind="Close" />
                    </Button>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Avatar / Product Image với viền trắng -->
                        <Border Margin="0 10 0 0" Width="140" Height="140" CornerRadius="15" Panel.ZIndex="2"
                            BorderBrush="White" BorderThickness="3" 
                            Background="White">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.3" ShadowDepth="3"/>
                            </Border.Effect>
                            <Rectangle Cursor="Hand" ToolTip="Thay đổi ảnh sản phẩm" Margin="3">
                                <Rectangle.InputBindings>
                                    <MouseBinding MouseAction="LeftClick" Command="{Binding SelectImageCommand}"/>
                                </Rectangle.InputBindings>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="{Binding EditImagePath, Converter={StaticResource ImgConverter}, TargetNullValue={StaticResource DefaultProduct}, FallbackValue={StaticResource DefaultProduct}}" 
                                            Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Border>

                        
                        <Border Background="#40000000" CornerRadius="10" Padding="8,2" Margin="0,15,0,0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SelectedDetailProduct.ProductID}" 
                                   FontSize="12" Foreground="White" Opacity="0.9"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 2. Content Area: Input Form -->
            <ScrollViewer Grid.Row="1" Margin="25 10,25 0" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <!-- Row: Name & Category -->
                    <Grid Margin="0,5,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel> 
                            <TextBlock Text="TÊN SẢN PHẨM" Style="{StaticResource FieldLabelStyle}" Margin="0 0 0 0" FontFamily="Roboto Black"/>
                            <TextBox Text="{Binding EditProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:TextFieldAssist.PrefixText=""
                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                 FontSize="14"
                                 FontFamily="Roboto Black"
                                 Margin="0 -5 0 0"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,20"> 
                        <StackPanel>
                            <TextBlock Text="DANH MỤC" Style="{StaticResource FieldLabelStyle}" FontFamily="Roboto Black"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      SelectedValuePath="CategoryID"
                                      SelectedValue="{Binding EditCategoryID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      DisplayMemberPath="CategoryName"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      IsEditable="True"
                                      FontFamily="Roboto Black"
                                      Margin="0 -5 0 0">
                                <ComboBox.Text>
                                    <Binding
                                         Mode="TwoWay"
                                         Path="SelectedCategoryText"
                                         UpdateSourceTrigger="PropertyChanged">
                                    </Binding>
                                </ComboBox.Text>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Price & Stock in two columns -->
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="GIÁ BÁN (VNĐ)" Style="{StaticResource FieldLabelStyle}" FontFamily="Roboto Black"/>
                            <TextBox Text="{Binding EditPrice, StringFormat=N0, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:TextFieldAssist.SuffixText="₫ "
                                     FontFamily="Roboto Black"
                                     Style="{StaticResource MaterialDesignTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="TỒN KHO" Style="{StaticResource FieldLabelStyle}" FontFamily="Roboto Black"/>
                            <TextBox Text="{Binding EditStockQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:TextFieldAssist.PrefixText="SL: "
                                 FontFamily="Roboto Black"
                                 Style="{StaticResource MaterialDesignTextBox}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="4">
                            <TextBlock Text="ĐƠN VỊ TÍNH" Style="{StaticResource FieldLabelStyle}" FontFamily="Roboto Black"/>
                            <ComboBox ItemsSource="{Binding UnitList}"
                                      SelectedValue="{Binding EditUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      FontFamily="Roboto Black"
                                      Margin="0 -8 0 0">
                                <ComboBox.Text>
                                    <Binding
                                         Mode="TwoWay"
                                         Path="SelectedUnitText"
                                         UpdateSourceTrigger="PropertyChanged">
                                    </Binding>
                                </ComboBox.Text>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <!-- Unit & Supplier -->


                   

                    <!-- Error/Success Message -->
                    <TextBlock Text="{Binding SaveMessage}"
                           FontSize="12" TextAlignment="Center" Margin="0,10,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#4CAF50"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </Trigger>
                                    <DataTrigger Binding="{Binding SaveMessage}" Value="Vui lòng kiểm tra lại thông tin!">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SaveMessage}" Value="Lỗi khi lưu!">
                                        <Setter Property="Foreground" Value="#F44336"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>

            <!-- 3. Bottom Area: Buttons -->
            <Grid Grid.Row="2" Margin="25,0,25,25">
                <Button 
                    Content="LƯU THÔNG TIN"
                    Style="{StaticResource SaveButtonStyle}"
                    Command="{Binding SaveChangesCommand}"
                    Margin="10,10,10,0">
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>