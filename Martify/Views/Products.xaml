<UserControl x:Class="Martify.Views.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:uc="clr-namespace:Martify.Views"
             xmlns:cv="clr-namespace:Martify.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="864" d:Background="Transparent"
             Style="{StaticResource Page_CinematicFocus_Style}"
             d:Style="{x:Null}">

    <UserControl.DataContext>
        <vm:ProductsVM />
        
    </UserControl.DataContext>
    <UserControl.Resources>
        <cv:StatusConverter x:Key="StatusConverter"/>
        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder" />
                <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Left" FontStyle="Italic"/>
            </StackPanel>
        </ControlTemplate>

        <ControlTemplate x:Key="CenterErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder1" />
                <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" FontSize="10" Margin="0,2,0,0" HorizontalAlignment="Center" FontStyle="Italic" TextAlignment="Center"/>
            </StackPanel>
        </ControlTemplate>

        <cv:ImagePathConverter x:Key="ImgConverter"/>
        <Style x:Key="SlidingDetailsPanelStyle" TargetType="Border">
            <Setter Property="Width" Value="0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsDetailsPanelOpen}" Value="True">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" 
                                         To="300" Duration="0:0:0.4">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="Width" 
                                         To="0" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <QuadraticEase EasingMode="EaseIn"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </DataTrigger.ExitActions>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SaveButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#9E9E9E"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Cursor" Value="Arrow"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsModified}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#4CAF50" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hàng tiêu đề -->
        <Grid Grid.Row="0">
            <!--TextBlock Text="Quản lý sản phẩm" 
                       FontSize="24" 
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"
                       Foreground="{DynamicResource PrimaryText}"/-->
        </Grid>

        <!-- Hàng tìm kiếm -->
        <Grid Grid.Row="1"
              VerticalAlignment="Center"
              Height="50"
              Margin="5">

            <Border Background="{DynamicResource CardBackground}"
                    CornerRadius="20">
            </Border>

            <!-- Biểu tượng tìm kiếm -->
            <materialDesign:PackIcon Kind="Magnify"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Left"
                                     Height="24" 
                                     Width="24" 
                                     Margin="15,0,0,0"
                                     Opacity="0.6"
                                     Foreground="{DynamicResource PrimaryText}"/>

            <!-- Ô tìm kiếm -->
            <TextBox materialDesign:HintAssist.Hint="Tìm tên sản phẩm..."
                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                 BorderThickness="0"
                 VerticalAlignment="Center"
                 Margin="40,0,10,0"
                 FontSize="14"
                 Foreground="{DynamicResource PrimaryText}"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>

        <!-- Bộ lọc -->
        <Grid Grid.Row="2" Margin="5">
            <StackPanel Orientation="Horizontal">
                <ComboBox Width="150" Height="40"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding Categories, UpdateSourceTrigger=PropertyChanged}"  
                  SelectedItem="{Binding SelectedCategory}" materialDesign:HintAssist.Hint="Danh Mục"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  Background="{DynamicResource CardBackground}"
                  Foreground="{DynamicResource PrimaryText}"
                  Margin="5,0,0,0" Padding="10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CategoryName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <ComboBox Width="150" Height="40"
                  HorizontalAlignment="Left"
                  ItemsSource="{Binding UnitList, UpdateSourceTrigger=PropertyChanged}"  SelectedItem="{Binding SelectedUnit}" materialDesign:HintAssist.Hint="Đơn vị"
                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                  Background="{DynamicResource CardBackground}"
                  Foreground="{DynamicResource PrimaryText}"
                  Margin="5,0,0,0" Padding="10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button Style="{StaticResource MaterialDesignToolButton}" Command="{Binding ClearFilterCommand}" ToolTip="Xóa bộ lọc" Height="40" Width="40">
                    <materialDesign:PackIcon Kind="FilterOff" Foreground="Red" Height="20" Width="20"/>
                </Button>
            </StackPanel>
      
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Nút nhập hàng -->
                <Button Margin="0 0 10 0"
                        Background="White"
                        Foreground="Black"
                        BorderBrush="Black"
                        BorderThickness="1"
                        Height="40" Width="auto"
                        Command="{Binding ImportProductCommand}"
                        Cursor="Hand"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        ToolTip="Nhập hàng vào kho">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Import" 
                         Width="20" 
                         Height="20" 
                         VerticalAlignment="Center"
                         Margin="0,0,8,0"/>
                        <TextBlock Text="Nhập" 
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>
                </Button>
                <!-- Nút Thêm sản phẩm -->
                <Button HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0"
                    Height="40"
                    Padding="15,0,15,0"
                    Command="{Binding AddProductCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#633FCE" 
                    Foreground="White"
                    BorderThickness="0"
                    ToolTip="Thêm sản phẩm mới">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                             Width="20" 
                                             Height="20" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,8,0"/>
                        <TextBlock Text="Thêm sản phẩm" 
                               VerticalAlignment="Center"
                               FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <!-- Hàng DataGrid -->
        <Grid Grid.Row="3" Margin="5" >
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Border Background="{DynamicResource CardBackground}"
          CornerRadius="25">
            </Border>
            <DataGrid Grid.Column ="0"
                      x:Name="productsDataGrid"
                      Background="{DynamicResource CardBackground}"
                      Margin="10"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Extended"
                      SelectionUnit="FullRow"
                      ItemsSource="{Binding Products}"
                      SelectedItem="{Binding SelectedProduct}"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#E0E0E0"
                      RowHeight="50"
                      ColumnHeaderHeight="45">
                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick"
                  Command="{Binding OpenDetailsCommand}"
                  CommandParameter="{Binding ElementName=productsDataGrid, Path=SelectedItem}"/>
                </DataGrid.InputBindings>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="Margin" Value="0,2.5,0,2.5"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                <Setter Property="Opacity" Value="0.4"/>
                                <Setter Property="ToolTip" Value="Sản phẩm đã hết hàng"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>


                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}" 
                        BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
                        <Setter Property="Padding" Value="10,5,10,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>

                    <Style TargetType="{x:Type DataGridRow}" 
                           BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style TargetType="{x:Type DataGridCell}" 
                           BasedOn="{StaticResource MaterialDesignDataGridCell}">
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    
                    <!-- Tên sản phẩm -->
                    <DataGridTemplateColumn Header="Tên sản phẩm" SortMemberPath="ProductName" IsReadOnly="True" Width="1,5*" MinWidth="230">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="30" Height="30" Margin="0 0 10 0">
                                        <Ellipse.Fill>
                                            <ImageBrush Stretch="UniformToFill">
                                                <ImageBrush.ImageSource>
                                                    <Binding Path="ImagePath" Converter="{StaticResource ImgConverter}" TargetNullValue="{StaticResource Anonymous}" FallbackValue="{StaticResource Anonymous}"/>
                                                </ImageBrush.ImageSource>
                                            </ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding ProductName}" VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource PrimaryText}" ToolTip="ProductName"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Mã sản phẩm -->
                    <DataGridTextColumn Width=""
                                        MinWidth="80"
                                        Binding="{Binding ProductID}"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                        Header="Mã"
                                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}"
                                BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <!-- Đơn vị đo-->
                    <DataGridTextColumn Width=""
                                        MinWidth="100"
                                        Header="Đơn vị đo"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnPopupEditingStyle}"
                                        Binding="{Binding Unit, UpdateSourceTrigger=LostFocus}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}"
                                 BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="0,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                        <!-- Đơn giá -->
                    <DataGridTextColumn Width=""
                                        MinWidth="120"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                        Header="Đơn giá"
                                        Binding="{Binding Price, StringFormat='\{0:N0\} VNĐ', UpdateSourceTrigger=LostFocus}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}"
                                   BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="-5,0,0,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Số lượng tồn -->
                    <DataGridTextColumn Width=""
                                        MinWidth="120"
                                        EditingElementStyle="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}"
                                        Header="Số lượng tồn"
                                        Binding="{Binding StockQuantity, UpdateSourceTrigger=LostFocus}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}"
                                   BasedOn="{StaticResource MaterialDesignDataGridTextColumnStyle}">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <!-- Cột Thao tác -->
                    <DataGridTemplateColumn Width="" MinWidth="100" Header="Công cụ" >
                        
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Chỉnh sửa"
                                            Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Margin="-30 0 0 0">
                                        <materialDesign:PackIcon Kind="Pencil" 
                                                                Width="18" 
                                                                Height="18"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xóa"
                                            Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="32"
                                            Height="32"
                                            Padding="0"
                                            Margin="5,0,0,0"
                                            Foreground="#F44336">
                                        <materialDesign:PackIcon Kind="Delete" 
                                                                Width="18" 
                                                                Height="18"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Border Grid.Column="1"
                Style="{StaticResource SlidingDetailsPanelStyle}"
                Background="{DynamicResource CardBackground}"
                BorderBrush="{DynamicResource MaterialDesignDivider}"
                BorderThickness="1,0,0,0"
                Margin="0,0,10, 0" CornerRadius="25">      

                <Grid Margin="20" DataContext="{Binding SelectedDetailProduct}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0, 20 ,0,10">
                        <Ellipse Width="100" Height="100" Margin="0,0,0,15">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                            </Ellipse.Effect>
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding ImagePath, Converter={StaticResource ImgConverter}, TargetNullValue={StaticResource Anonymous}, FallbackValue={StaticResource Anonymous}}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Text="{Binding ProductName}" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBlock Text="{Binding ProductID}" FontSize="14" Foreground="{DynamicResource SecondaryText}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <ScrollViewer x:Name="DetailScrollViewer" Grid.Row="1" Margin="0,0,0,10">
                        <StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Category" Width="22" Height="22" Foreground="{DynamicResource SecondaryText}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <ComboBox
                                        ItemsSource="{Binding DataContext.Categories, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        SelectedValuePath="CategoryID"
                                        SelectedValue="{Binding CategoryID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
                                        DisplayMemberPath="CategoryName"
                                        FontSize="15"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Width="160"
                                        materialDesign:HintAssist.Hint="Danh mục"
                                        BorderThickness="0,0,0,1"
                                        VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Weight" Width="22" Height="22" Foreground="{DynamicResource SecondaryText}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Unit, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
                                         FontSize="15" Foreground="{DynamicResource PrimaryText}"
                                         Width="160" materialDesign:HintAssist.Hint="Đơn vị tính" BorderThickness="0,0,0,1" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="Money" Width="22" Height="22" Foreground="{DynamicResource SecondaryText}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding Price, StringFormat=N0, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
                                         FontSize="15" Foreground="{DynamicResource PrimaryText}"
                                         Width="160" materialDesign:HintAssist.Hint="Giá bán (VND)" BorderThickness="0,0,0,1" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" VerticalAlignment="Center" ToolTip="Số lượng tồn kho hiện tại">
                                <materialDesign:PackIcon Kind="Package" Width="22" Height="22" Foreground="{DynamicResource SecondaryText}" Margin="0,0,15,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding StockQuantity, StringFormat=N0, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                          Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
                                          FontSize="15" Foreground="{DynamicResource PrimaryText}"
                                          Width="160" materialDesign:HintAssist.Hint="Số lượng tồn" BorderThickness="0,0,0,1" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Top" ToolTip="Nhà cung cấp">
                                <materialDesign:PackIcon Kind="Truck" Width="22" Height="22" Foreground="{DynamicResource SecondaryText}" Margin="0,0,15,0" VerticalAlignment="Top"/>
                                <TextBox Text="{Binding ImportReceipt.Supplier.SupplierName, TargetNullValue='', UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         Validation.ErrorTemplate="{StaticResource ErrorTemplate}"
                                         FontSize="15" Foreground="{DynamicResource PrimaryText}"
                                         Width="160" materialDesign:HintAssist.Hint="Nhà cung cấp" BorderThickness="0,0,0,1" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <Grid Grid.Row="2" Height="50">
                        <StackPanel>
                            <Button Content="LƯU THAY ĐỔI"
                                    Height="45"
                                    Style="{StaticResource SaveButtonStyle}"
                                    Command="{Binding SaveChangesCommand}"
                                    CommandParameter="{Binding}"
                                    IsDefault="True"/>

                            <TextBlock Text="{Binding SaveMessage}"
                                   Foreground="#4CAF50"
                                   FontSize="12" FontStyle="Italic" FontWeight="SemiBold"
                                   HorizontalAlignment="Center" Margin="0,7.5,0,7.5"
                                   TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>