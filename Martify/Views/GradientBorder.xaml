<UserControl x:Class="Martify.Views.GradientBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ucGradientBorder">
    <Grid>
        <Border CornerRadius="24.25" BorderThickness="8">
            <!--Gradient Border Trigger-->
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource GradientRotateStoryboard}" />
                </EventTrigger>
            </Border.Triggers>

            <!--Border Brush-->
            <Border.BorderBrush>
                <LinearGradientBrush x:Name="AnimatedBorderBrush"
                                     StartPoint="-1,0.5"
                                     EndPoint="0.5,1">
                    <GradientStop Color="#FF71FBF8" Offset="0.00" />
                    <GradientStop Color="LightBlue" Offset="0.30" />
                    <GradientStop Color="#FF71FBF8" Offset="0.55" />
                    <GradientStop Color="AliceBlue" Offset="0.80" />
                    <GradientStop Color="Gray" Offset="1.00" />
                    <LinearGradientBrush.Transform>
                        <TransformGroup>
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                        </TransformGroup>
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Border.BorderBrush>
        </Border>
    </Grid>
</UserControl>
