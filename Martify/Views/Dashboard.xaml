                                        <TextBlock Text="Đã bán: 534"
                                                   FontSize="12"
                                                   FontFamily="Roboto"
                                                   Foreground="#4CAF50"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>