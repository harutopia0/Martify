<UserControl x:Class="Martify.Views.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cv="clr-namespace:Martify.Converters" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200" d:Background="Transparent"
             d:Style="{x:Null}">

    <UserControl.DataContext>
        <vm:ProductsVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <cv:StatusConverter x:Key="StatusConverter"/>
        <cv:ImagePathConverter x:Key="ImgConverter"/>

        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="16"/>
        </Style>

        <!-- Filter Chip Style -->
        <Style x:Key="FilterChipStyle" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- SEARCH BAR -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}"
                Margin="20,10,150,0"
                Padding="20,0"
                Background="#F8F9FA"
                CornerRadius="22"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Height="40"
                VerticalAlignment="Center">
            <Grid>
                <materialDesign:PackIcon Kind="Magnify"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Width="22" 
                                       Height="22" 
                                       Margin="18,0,0,0"
                                       Foreground="#9E9E9E"/>

                <TextBox materialDesign:HintAssist.Hint="Tìm kiếm sản phẩm theo tên, mã..."
                         materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                         Height="40"
                         BorderThickness="0"
                         Background="Transparent"
                         VerticalAlignment="Center"
                         Margin="50,0,20,0"
                         FontSize="14"
                         Foreground="{DynamicResource PrimaryText}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </Grid>
        </Border>

        <!-- HEADER SECTION -->
        <Grid Grid.Row="1" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Filters -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,15,0">
                <ComboBox ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}" 
                          materialDesign:HintAssist.Hint="Danh mục"
                          Style="{StaticResource FilterChipStyle}"
                          Margin="0,0,10,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding CategoryName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox ItemsSource="{Binding UnitList}"
                          SelectedItem="{Binding SelectedUnit}" 
                          materialDesign:HintAssist.Hint="Đơn vị"
                          Style="{StaticResource FilterChipStyle}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Clear Filter Button -->
                <Button Style="{StaticResource MaterialDesignIconButton}" 
                        Command="{Binding ClearFilterCommand}" 
                        ToolTip="Xóa bộ lọc" 
                        Height="42" 
                        Width="42">
                    <materialDesign:PackIcon Kind="FilterOff" 
                                           Foreground="#F44336" 
                                           Height="22" 
                                           Width="22"/>
                </Button>

                <TextBlock Margin="5,0,0,0" VerticalAlignment="Center">
                    <Run Text="Tổng:" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                    <Run Text="{Binding Products.Count, Mode=OneWay}" Foreground="#2196F3" FontWeight="SemiBold" FontSize="14"/>
                    <Run Text="sản phẩm" Foreground="{DynamicResource SecondaryText}" FontSize="12"/>
                </TextBlock>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Import Button -->
                <Button Margin="0,0,12,0"
                        Height="44"
                        Padding="20,0"
                        Command="{Binding ImportProductCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="White"
                        Foreground="#FF6B35"
                        BorderBrush="#FF6B35"
                        BorderThickness="2"
                        ToolTip="Nhập hàng vào kho">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="TrayArrowDown" 
                                               Width="22" 
                                               Height="22" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Nhập hàng" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>

                <!-- Add Product Button -->
                <Button Height="44"
                        Padding="20,0"
                        Command="{Binding AddProductCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#633FCE" 
                        Foreground="White"
                        BorderThickness="0"
                        ToolTip="Thêm sản phẩm mới">
                    <Button.Effect>
                        <DropShadowEffect Color="#633FCE" BlurRadius="12" ShadowDepth="3" Opacity="0.3"/>
                    </Button.Effect>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                               Width="22" 
                                               Height="22" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"/>
                        <TextBlock Text="Thêm sản phẩm" 
                                   VerticalAlignment="Center"
                                   FontSize="14"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- MAIN CONTENT AREA -->
        <Border Grid.Row="2" 
                Style="{StaticResource CardStyle}"
                Margin="20,0,20,20"
                Padding="5">

            <DataGrid x:Name="productsDataGrid"
                      Background="Transparent"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserReorderColumns="False"
                      CanUserResizeColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      ItemsSource="{Binding Products}"
                      SelectedItem="{Binding SelectedProduct}"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      RowHeight="50"
                      ColumnHeaderHeight="50"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      BorderThickness="0"
                      VirtualizingPanel.IsVirtualizing="True"
                      VirtualizingPanel.VirtualizationMode="Recycling"
                      EnableColumnVirtualization="True"
                      EnableRowVirtualization="True">

                <DataGrid.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick"
                                  Command="{Binding OpenDetailsCommand}"
                                  CommandParameter="{Binding ElementName=productsDataGrid, Path=SelectedItem}"/>
                </DataGrid.InputBindings>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="Margin" Value="8,4"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F7FA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="ToolTip" Value="Sản phẩm đã hết hàng"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}" 
                           BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="20,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    </Style>

                    <Style TargetType="{x:Type DataGridCell}" 
                           BasedOn="{StaticResource MaterialDesignDataGridCell}">
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="16,8"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <!-- Product Name with Image -->
                    <DataGridTemplateColumn Header="SẢN PHẨM" Width="2*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Product Image -->
                                    <Border Grid.Column="0"
                                            Width="35" 
                                            Height="35"
                                            CornerRadius="10"
                                            Background="#F5F5F5"
                                            Margin="0,0,12,0">
                                        <Border CornerRadius="10" ClipToBounds="True">
                                            <Image Stretch="UniformToFill"
                                                   Source="{Binding ImagePath, Converter={StaticResource ImgConverter}, TargetNullValue={StaticResource DefaultProduct}, FallbackValue={StaticResource DefaultProduct}}"/>
                                        </Border>
                                    </Border>

                                    <!-- Product Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ProductName}" 
                                                   FontSize="14" 
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource PrimaryText}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="250"
                                                   HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding ProductID}" 
                                                   FontSize="12" 
                                                   Foreground="{DynamicResource SecondaryText}"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Category -->
                    <DataGridTemplateColumn Header="DANH MỤC" Width="1.5*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#F0F4FF"
                                        CornerRadius="6"
                                        Padding="10,5"
                                        Height="35"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left">
                                    <TextBlock Text="{Binding Category.CategoryName}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="#5B7EF4"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Unit -->
                    <DataGridTextColumn Header="ĐVT" 
                                        Binding="{Binding Unit}" 
                                        Width="*"
                                        CanUserSort="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Price -->
                    <DataGridTemplateColumn Header="GIÁ BÁN" Width="*" CanUserSort="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock FontSize="12" FontWeight="Bold" Foreground="#2196F3" VerticalAlignment="Center">
                                        <Run Text="{Binding Price, StringFormat='N0'}"/>
                                        <Run Text="₫" FontSize="13"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Stock -->
                    <DataGridTemplateColumn Header="TỒN KHO" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" 
                                        Padding="10,6"
                                        Margin="6,0,0,0"
                                        HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#E8F5E9"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontSize="13" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="Text" Value="{Binding StockQuantity}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding StockQuantity}" Value="0">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                        <Setter Property="Text" Value="Hết"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="CÔNG CỤ" Width="1*" MinWidth="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Chỉnh sửa"
                                            Command="{Binding DataContext.OpenDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="25" Height="25"
                                            Margin="0,0,4,0">
                                        <materialDesign:PackIcon Kind="Pencil" 
                                                               Width="18" 
                                                               Height="18"
                                                               Foreground="#2196F3"/>
                                    </Button>

                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            ToolTip="Xóa"
                                            Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Width="25" Height="25">
                                        <materialDesign:PackIcon Kind="Delete" 
                                                               Width="18" 
                                                               Height="18"
                                                               Foreground="#F44336"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>