<UserControl x:Class="Martify.Views.ImportExcelSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="500">

    <Border Background="{DynamicResource CardBackground}" 
            CornerRadius="10" 
            BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <materialDesign:PackIcon Kind="FileExcel" Foreground="#4CAF50" 
                                         Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBlock Text="Cấu trúc file Excel mẫu (Bắt buộc)" 
                           FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" 
                           FontSize="14" VerticalAlignment="Center"/>
            </StackPanel>

            <Border Grid.Row="1" BorderBrush="#4CAF50" BorderThickness="1" Background="White">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="70"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="Họ và tên" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="Ngày sinh" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="SĐT" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="3" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="Giới tính" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="4" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="Email" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="5" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,1,1" 
                            Padding="5">
                        <TextBlock Text="Ngày vào làm" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="6" 
                            Background="#E8F5E9" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="0,0,0,1" 
                            Padding="5">
                        <TextBlock Text="Địa chỉ" 
                                   FontWeight="Bold" 
                                   FontSize="11" 
                                   Foreground="Black" 
                                   HorizontalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                <TextBlock Text="• Dữ liệu bắt đầu từ dòng 2 (Dòng 1 là tiêu đề)." Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
                <TextBlock Text="• Cột 1 là 'Họ Tên' (Không có cột Mã NV - Được tạo tự động)." Foreground="{DynamicResource SecondaryText}" FontSize="11"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>