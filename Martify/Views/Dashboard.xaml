<UserControl x:Class="Martify.Views.Dashboard"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:Martify.Views"
         xmlns:vm="clr-namespace:Martify.ViewModels" 
         xmlns:converters="clr-namespace:Martify.Converters"
         xmlns:behaviors="clr-namespace:Martify.Behaviors"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         mc:Ignorable="d" 
         d:DesignHeight="720" d:DesignWidth="864"
         Style="{StaticResource Page_RadarReveal_Style}"
         d:Style="{x:Null}">

    <UserControl.Resources>
        <converters:RevenueHeightConverter x:Key="RevenueHeightConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:DashboardVM />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="280"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,160">
            <Border Background="{DynamicResource CardBackground}" 
                    Margin="20,20,15,0"
                    CornerRadius="30">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Margin="25,15,0,5"
                               Text="Doanh Thu 7 Ngày Gần Nhất"
                               FontSize="25" 
                               FontFamily="Roboto Black"
                               TextAlignment="Left"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               Foreground="{DynamicResource PrimaryText}"/>

                    <!-- Chart Area -->
                    <ItemsControl 
                                  ItemsSource="{Binding DailyRevenues}"
                                  Margin="25,49,25,11" Grid.RowSpan="2">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Bar Container -->
                                    <Grid Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                        <Grid.ToolTip>
                                            <ToolTip Background="Transparent" 
                                                     BorderBrush="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8"
                                                     HasDropShadow="True">
                                                <Border CornerRadius="15" 
                                                        Padding="15"
                                                        Background="{DynamicResource CardBackground}"
                                                        BorderBrush="#067FF8"
                                                        BorderThickness="2"
                                                        Margin="10">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000"
                                                                          BlurRadius="20"
                                                                          ShadowDepth="5"
                                                                          Direction="270"
                                                                          Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="280">
                                                        <!-- Date Header -->
                                                        <TextBlock Text="{Binding FullDate}"
                                                                   FontSize="14"
                                                                   FontFamily="Roboto Bold"
                                                                   Foreground="{DynamicResource PrimaryText}"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,0,0,10"/>

                                                        <!-- Revenue Amount -->
                                                        <Border Background="#067FF8" 
                                                                CornerRadius="8"
                                                                Padding="10"
                                                                Margin="0,0,0,10">
                                                            <StackPanel>
                                                                <TextBlock Text="Doanh thu"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="White"
                                                                           Opacity="0.9"/>
                                                                <TextBlock Text="{Binding FormattedRevenue}"
                                                                           FontSize="16"
                                                                           FontFamily="Roboto Bold"
                                                                           Foreground="White"
                                                                           Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- Proportion of Week -->
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="Tỷ lệ trong tuần"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Medium"
                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding PercentageOfWeekFormatted}"
                                                                       FontSize="13"
                                                                       FontFamily="Roboto Bold"
                                                                       Foreground="#067FF8"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>

                                                        <!-- Separator -->
                                                        <Border Height="1" 
                                                                Background="{DynamicResource SecondaryText}"
                                                                Opacity="0.2"
                                                                Margin="0,5,0,10"/>

                                                        <!-- Comparison with Previous Day -->
                                                        <Grid Margin="0,0,0,6">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowLeft"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày trước"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithPreviousFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasPreviousDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>

                                                        <!-- Comparison with Next Day -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowRight"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày sau"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithNextFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasNextDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Grid.ToolTip>

                                        <Border Background="#E0E0E0" 
                                                CornerRadius="5"
                                                Height="120"
                                                VerticalAlignment="Bottom"/>

                                        <Border behaviors:BarAnimationBehavior.AnimateOnLoad="True"
                                                Background="#067FF8" 
                                                CornerRadius="5"
                                                VerticalAlignment="Bottom"
                                                MinHeight="2">
                                            <Border.Height>
                                                <MultiBinding Converter="{StaticResource RevenueHeightConverter}">
                                                    <Binding Path="Revenue"/>
                                                    <Binding Path="MaxRevenue"/>
                                                </MultiBinding>
                                            </Border.Height>
                                        </Border>
                                    </Grid>

                                    <!-- Day of week -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding DayOfWeek}"
                                               FontSize="11"
                                               FontFamily="Roboto Medium"
                                               Foreground="{DynamicResource SecondaryText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,2"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding DayLabel}"
                                               FontSize="12"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Total Revenue and Comparison at bottom -->
                    <Grid Grid.Row="2" Margin="25,0,25,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="Tổng: "
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       Foreground="{DynamicResource SecondaryText}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding GiaTriDoanhThu, StringFormat={}{0:N0} VND}"
                                       FontSize="20"
                                       FontFamily="Roboto Bold"
                                       Foreground="#067FF8"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding TyLeThayDoi, StringFormat={}{0:F1}%}"
                                       FontSize="16"
                                       FontFamily="Roboto Bold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <materialDesign:PackIcon Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Kind" Value="TrendingUp"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Kind" Value="TrendingDown"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
                Grid.Row="0" 
                Grid.RowSpan="2"
                Background="{DynamicResource CardBackground}" 
                Margin="0,20,20,20"
                CornerRadius="30">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Margin="15">
                <TextBlock Text="Tổng Quan Nhanh"
                           FontSize="20"
                           FontFamily="Roboto Black"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource PrimaryText}"/>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="ProductsCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Package" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#067FF8"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Sản Phẩm"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoSanPham, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#067FF8"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="InvoicesCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Receipt" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#4CAF50"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Đơn Hàng"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoDonHang, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="EmployeesCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#FF9800"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Nhân Viên"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoNhanVien, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Thẻ Cảnh Báo Tồn Kho -->
                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,0"
                        Cursor="Hand">
                    <StackPanel>
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#F44336"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Cảnh Báo"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>

                        <!-- Cảnh báo sắp hết hàng (Vàng/Cam) -->
                        <Border Background="#FFF3E0" 
                                CornerRadius="8" 
                                Padding="10,8"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="LowStockAlert_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="TrendingDown" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#FF9800"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                
                                <TextBlock Grid.Column="1"
                                           Text="Sắp hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#F57C00"
                                           VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamSapHet, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Cảnh báo hết hàng (Đỏ) -->
                        <Border Background="#FFEBEE" 
                                CornerRadius="8" 
                                Padding="10,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="OutOfStockAlert_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="PackageVariantClosed" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#F44336"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>
                                
                                <TextBlock Grid.Column="1"
                                           Text="Hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#D32F2F"
                                           VerticalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamHetHang, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#F44336"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Column="0" 
                Grid.Row="1" 
                Background="{DynamicResource CardBackground}" 
                Margin="20,0,15,20"
                CornerRadius="30">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="25,15,25,10"
                            HorizontalAlignment="Stretch">
                    <TextBlock Text="Hóa Đơn Giá Trị Cao"
                               FontSize="20"
                               FontFamily="Roboto Black"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryText}"/>

                    <materialDesign:PackIcon Kind="Trophy" 
                                             Width="28" 
                                             Height="28" 
                                             Foreground="#FFD700"
                                             VerticalAlignment="Center"
                                             Margin="10,0,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="15,0,15,15">
                    <StackPanel>
                        <Border Background="{DynamicResource ItemBackground}" 
                                CornerRadius="15" 
                                Padding="15" 
                                Margin="5,5,5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="261*"/>
                                    <ColumnDefinition Width="59*"/>
                                    <ColumnDefinition Width="53.393"/>
                                    <ColumnDefinition Width="64"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#067FF8" 
                                        CornerRadius="10" 
                                        Width="40" 
                                        Height="40"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="1" 
                                               FontSize="20" 
                                               FontFamily="Roboto Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Grid.ColumnSpan="3" Margin="0,0,53,0">
                                    <TextBlock Text="HD001234"
                                               FontSize="16"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"/>
                                    <TextBlock Text="Nguyễn Văn A - 15/11/2024"
                                               FontSize="12"
                                               FontFamily="Roboto"
                                               Foreground="{DynamicResource SecondaryText}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="3" 
                                           Text="15,500,000 VND"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#067FF8"
                                           VerticalAlignment="Center" Grid.ColumnSpan="2"/>
                            </Grid>
                        </Border>

                        <Border Background="{DynamicResource ItemBackground}" 
                                CornerRadius="15" 
                                Padding="15" 
                                Margin="5,0,5,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#4CAF50" 
                                        CornerRadius="10" 
                                        Width="40" 
                                        Height="40"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="2" 
                                               FontSize="20" 
                                               FontFamily="Roboto Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="HD001235"
                                               FontSize="16"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"/>
                                    <TextBlock Text="Trần Thị B - 14/11/2024"
                                               FontSize="12"
                                               FontFamily="Roboto"
                                               Foreground="{DynamicResource SecondaryText}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="12,800,000 VND"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#4CAF50"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Background="{DynamicResource ItemBackground}" 
                                CornerRadius="15" 
                                Padding="15" 
                                Margin="5,0,5,5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#FF9800" 
                                        CornerRadius="10" 
                                        Width="40" 
                                        Height="40"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="3" 
                                               FontSize="20" 
                                               FontFamily="Roboto Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="HD001236"
                                               FontSize="16"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"/>
                                    <TextBlock Text="Lê Văn C - 13/11/2024"
                                               FontSize="12"
                                               FontFamily="Roboto"
                                               Foreground="{DynamicResource SecondaryText}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" 
                                           Text="10,200,000 VND"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>