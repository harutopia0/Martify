<Window x:Class="Martify.Views.AddSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Martify.ViewModels"
        mc:Ignorable="d"
        Name="addSupplierWindow"
        Title="Thêm nhà cung cấp" 
        Height="550" 
        Width="500"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
        <Window.DataContext>
            <vm:AddSupplierVM />
        </Window.DataContext>
        <Window.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#424242" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder" />
                <TextBlock Text="{Binding [0].ErrorContent}" 
                           Foreground="#F44336" 
                           FontSize="11" 
                           Margin="5,3,0,0"
                           FontStyle="Italic"/>
            </StackPanel>
        </ControlTemplate>

        <Style x:Key="ValidatedTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True"/>
        </Style>
    </Window.Resources>

    <Border Background="#F5F5F5" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#2196F3" 
                    CornerRadius="15,15,0,0">
                <!--MouseLeftButtonDown="Border_MouseLeftButtonDown">-->
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <materialDesign:PackIcon Kind="TruckPlus" 
                                               Width="28" 
                                               Height="28"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                        <TextBlock Text="Thêm nhà cung cấp mới" 
                                   FontSize="20" 
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" 
                    Background="White" 
                    Margin="15" 
                    CornerRadius="10" 
                    Padding="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Tên nhà cung cấp *" Style="{StaticResource LabelText}"/>
                            <TextBox materialDesign:HintAssist.Hint="Nhập tên nhà cung cấp..."
                                     Text="{Binding SupplierName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Margin="0,0,0,20"
                                     Height="Auto"/>

                            <TextBlock Text="Số điện thoại *" Style="{StaticResource LabelText}"/>
                            <TextBox materialDesign:HintAssist.Hint="Nhập số điện thoại..."
                                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Margin="0,0,0,20"
                                     Height="auto"/>

                            <TextBlock Text="Email" Style="{StaticResource LabelText}"/>
                            <TextBox materialDesign:HintAssist.Hint="example@gmail.com"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Margin="0,0,0,20"
                                     Height="auto"/>

                            <TextBlock Text="Địa chỉ" Style="{StaticResource LabelText}"/>
                            <TextBox materialDesign:HintAssist.Hint="Nhập địa chỉ..."
                                     Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ValidatedTextBox}"
                                     Height="80"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalContentAlignment="Top"
                                     Padding="10"/>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button Height="45" 
                                Width="120"
                                Margin="0,0,10,0"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding CloseCommand}"
                                CommandParameter="{Binding ElementName=addSupplierWindow}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Hủy bỏ" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Height="45" 
                                Width="140"
                                Background="#4CAF50"
                                BorderBrush="{x:Null}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding SaveCommand}"
                                CommandParameter="{Binding ElementName=addSupplierWindow}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentSave" Width="18" Height="18" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="Lưu thông tin" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>