<UserControl x:Class="Martify.Views.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="864"
             Style="{StaticResource Page_CinematicFocus_Style}"
             d:Style="{x:Null}">

    <UserControl.DataContext>
        <vm:ProductsVM />
    </UserControl.DataContext>

    <Grid>
        <Grid>
            <Grid>
                <Grid Width="500" Height="400"
                      Margin="25,0,0,25"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Left">
                    <Border Background="LightBlue"
                            CornerRadius="20">

                    </Border>
                </Grid>

                <Grid Width="500" Height="251"
                      Margin="25,25,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left">
                    <Border Background="LightBlue"
                            CornerRadius="20">

                    </Border>
                </Grid>

                <Grid Width="300" Height="670"
                      Margin="539,0,0,0"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left">
                    <Border Background="LightBlue"
                            CornerRadius="20">

                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
