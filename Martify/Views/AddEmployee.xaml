<Window x:Class="Martify.Views.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:uc="clr-namespace:Martify.Views"
        xmlns:vm="clr-namespace:Martify.ViewModels"
        mc:Ignorable="d"
        Name="addEmployeeWindow"
        Title="AddEmployee" Height="500" Width="700"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.DataContext>
        <vm:AddEmployeeVM />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="text" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#363636" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#FFD500" Padding="30" CornerRadius="25 0 0 25">
                <StackPanel VerticalAlignment="Center">
                    </StackPanel>
            </Border>

            <Border Grid.Column="1" Padding="20" Background="#ffffff" CornerRadius="0 25 25 0">
                <Grid>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/> <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="60"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Họ và tên" Style="{StaticResource text}"/>
                        <TextBlock Grid.Row="1" Text="Nơi cư trú" Style="{StaticResource text}"/>
                        <TextBlock Grid.Row="2" Text="Số điện thoại" Style="{StaticResource text}"/>
                        <TextBlock Grid.Row="3" Text="Email liên hệ" Style="{StaticResource text}"/>
                        <TextBlock Grid.Row="4" Text="Giới tính" Style="{StaticResource text}"/>
                        <TextBlock Grid.Row="5" Text="Ngày sinh" Style="{StaticResource text}"/>

                        <Grid Grid.Column="1" Grid.Row="0">
                            <TextBox Height="40" VerticalAlignment="Center"
                                     Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Nguyễn Văn A"
                                     materialDesign:HintAssist.IsFloating="False"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="10" FontSize="12" FontFamily="Times New Roman"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="1">
                            <TextBox Height="40" VerticalAlignment="Center"
                                     Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="Quận 1, TP Hồ Chí Minh"
                                     materialDesign:HintAssist.IsFloating="False"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="10" FontSize="12" FontFamily="Times New Roman"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="2">
                            <TextBox Height="40" VerticalAlignment="Center"
                                     Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="01223334444"
                                     materialDesign:HintAssist.IsFloating="False"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="10" FontSize="12" FontFamily="Times New Roman"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="3">
                            <TextBox Height="40" VerticalAlignment="Center"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                     materialDesign:HintAssist.Hint="abcxyz123456@gmail.com"
                                     materialDesign:HintAssist.IsFloating="False"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="10" FontSize="12" FontFamily="Times New Roman"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="4">
                            <ListBox x:Name="GenderListBox" 
                                     Style="{StaticResource MaterialDesignToolToggleListBox}"
                                     Height="40" HorizontalAlignment="Left" Margin="0 10">
                                
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding GenderSelectionChangedCommand}" 
                                                               CommandParameter="{Binding ElementName=GenderListBox}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <ListBoxItem Width="100" Tag="Nam">
                                    <StackPanel Orientation="Horizontal" Margin="6 0">
                                        <materialDesign:PackIcon Kind="GenderMale" Width="24" Height="24" />
                                        <TextBlock Text="Nam" Margin="8 0" VerticalAlignment="Center" />
                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem Width="100" Tag="Nữ">
                                    <StackPanel Orientation="Horizontal" Margin="6 0">
                                        <materialDesign:PackIcon Kind="GenderFemale" Width="24" Height="24" />
                                        <TextBlock Text="Nữ" Margin="8 0" VerticalAlignment="Center" />
                                    </StackPanel>
                                </ListBoxItem>
                            </ListBox>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="5">
                            <DatePicker Height="40"
                                        SelectedDate="{Binding BirthDate, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="01/01/2000"
                                        materialDesign:HintAssist.IsFloating="False"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
                                        Padding="10" FontSize="12" Language="vi-VN"/>
                        </Grid>
                    </Grid>

                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Button Height="40" Margin="0,0,10,0"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Foreground="White" BorderBrush="{x:Null}" IsDefault="False"
                                    Command="{Binding CloseCommand}"
                                    CommandParameter="{Binding ElementName=addEmployeeWindow}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0.2" EndPoint="1,0.8">
                                        <GradientStop Color="Black" Offset="1"/>
                                        <GradientStop Color="#FF0B0B0B" Offset="0"/>
                                        <GradientStop Color="#FFF8F96E" Offset="0.999"/>
                                        <GradientStop Color="#FFF1F193" Offset="0.996"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <TextBlock Text="Hủy bỏ" FontFamily="Times New Roman" FontSize="14"/>
                            </Button>

                            <Button Height="40"
                                    materialDesign:ButtonAssist.CornerRadius="10"
                                    Style="{StaticResource MaterialDesignRaisedButton}" 
                                    Foreground="White" BorderBrush="{x:Null}" IsDefault="True"
                                    Command="{Binding SaveCommand}"
                                    CommandParameter="{Binding ElementName=addEmployeeWindow}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0.2" EndPoint="1,0.8">
                                        <GradientStop Color="Black" Offset="1"/>
                                        <GradientStop Color="#FF5463E2" Offset="0"/>
                                        <GradientStop Color="#FF6ECCF9" Offset="0.999"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <TextBlock Text="Xác nhận thêm" FontFamily="Times New Roman" FontSize="14"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <uc:WindowControl VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,5,0"/>
    </Grid>
</Window>