<Window x:Class="Martify.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Martify"
        xmlns:uc="clr-namespace:Martify.Views"
        xmlns:ctrl="clr-namespace:Martify.Controls"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Martify"
        Height="500" Width="800"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Style="{StaticResource MaterialDesignWindow}"
        DataContext="{StaticResource LoginVM}"
        Background="Transparent"
        Name="loginWindow">

    <Grid>
        <Border CornerRadius="20" Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Border CornerRadius="20">
                <Border.Background>
                    <ImageBrush ImageSource="{StaticResource LoginBackground}"
                                Stretch="UniformToFill" Opacity="0.1"/>
                </Border.Background>
            </Border>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <wv2:WebView2 x:Name="webView" 
                              DefaultBackgroundColor="Transparent"
                              Height="400"
                              Margin="20"/>

                <ContentControl Content="{Binding Status}"
                                IsTabStop="False"
                                Panel.ZIndex="999"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,30"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Height="200"
                      Width="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Label FontFamily="{StaticResource BungeeSpice}"
                               FontSize="35"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="Black"
                               Content="Martify">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Style.Triggers>
                                        <EventTrigger RoutedEvent="Window.Loaded">
                                            <BeginStoryboard Storyboard="{StaticResource MartifyAnimation}"></BeginStoryboard>
                                        </EventTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </Grid>

                    <Grid Grid.Row="1">
                        <TextBlock FontSize="14" 
                                   Margin="0,20,0,0" 
                                   TextAlignment="Center" 
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   Foreground="#555"
                                   Text="Martify là ứng dụng WPF quản lý siêu thị, giúp theo dõi sản phẩm, nhân viên, khách hàng và hóa đơn. Giao diện trực quan, dễ dùng, hỗ trợ thống kê và quản lý hiệu quả hoạt động siêu thị.">
                        </TextBlock>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <uc:WindowControl Panel.ZIndex="1000"/>

    </Grid>
</Window>