<Window x:Class="Martify.Views.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:Martify.ViewModels"
        xmlns:uc="clr-namespace:Martify.Views"
        mc:Ignorable="d"
        Name="addProductWindow"
        Title="Thêm sản phẩm mới" 
        Height="550" 
        Width="850"
        WindowStyle="None"
        BorderThickness="0"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

        <Window.DataContext>
        <vm:AddProductVM />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#424242" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>

        <ControlTemplate x:Key="ErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder" />
                <TextBlock Text="{Binding [0].ErrorContent}" 
                           Foreground="#F44336" 
                           FontSize="10" 
                           Margin="5,0,0,0"
                           FontStyle="Italic"/>
            </StackPanel>
        </ControlTemplate>

        <Style x:Key="ValidatedTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <Style x:Key="ValidatedComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Validation.ErrorTemplate" Value="{StaticResource ErrorTemplate}" />
            <Setter Property="Height" Value="45"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>
    </Window.Resources>

    <Border Background="#F5F5F5" CornerRadius="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Thanh tiêu đề với vùng kéo -->
            <Border Grid.Row="0" 
                    Background="#2196F3" 
                    CornerRadius="15,15,0,0"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Thêm sản phẩm mới" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"
                               Margin="25,0,0,0"/>
                    
                    
                </Grid>
            </Border>

            <!-- Nội dung chính -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Bảng bên trái - Chọn ảnh -->
                <Border Grid.Column="0" 
                        Background="White" 
                        Padding="20"
                        Margin="15,15,7.5,15"
                        CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center">
                        <!-- Xem trước ảnh -->
                        <Border Width="200" 
                                Height="200" 
                                CornerRadius="10"
                                BorderBrush="#E0E0E0"
                                BorderThickness="2"
                                Background="#FAFAFA">
                            <Grid>
                                <Rectangle Width="190" Height="190"
                                           RadiusX="8" RadiusY="8"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                    <Rectangle.Fill>
                                        <ImageBrush Stretch="UniformToFill">
                                            <ImageBrush.ImageSource>
                                                <Binding Path="SelectedImagePath"
                                                         FallbackValue="{StaticResource DefaultProduct}"/>
                                            </ImageBrush.ImageSource>
                                        </ImageBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Biểu tượng giữ chỗ khi không có ảnh -->
                                <materialDesign:PackIcon Kind="Image" 
                                                        Width="190" 
                                                        Height="190"
                                                        Foreground="#BDBDBD"
                                                        Visibility="{Binding SelectedImagePath}" HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="-1"/>
                            </Grid>
                        </Border>

                        <!-- Hướng dẫn -->
                        <TextBlock Text="Ảnh sản phẩm" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,5"
                                   Foreground="#424242"/>

                        <TextBlock Text="Chọn ảnh để hiển thị sản phẩm" 
                                   FontSize="12"
                                   TextAlignment="Center" 
                                   TextWrapping="Wrap"
                                   Foreground="#757575"
                                   Margin="0,0,0,20"/>

                        <!-- Nút chọn ảnh -->
                        <Button Height="45"
                                
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding SelectImageCommand}"
                                Background="#2196F3"
                                BorderBrush="{x:Null}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ImagePlus" 
                                                        Width="20" 
                                                        Height="20"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,10,0"/>
                                <TextBlock Text="Chọn ảnh" 
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Bảng bên phải - Thông tin sản phẩm -->
                <Border Grid.Column="1" 
                        Background="White" 
                        Padding="30,20"
                        Margin="7.5,15,15,15"
                        CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Các trường biểu mẫu -->
                        <StackPanel Grid.Row="1">
                            <!-- Mã sản phẩm (Tự động tạo, chỉ hiển thị) -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Mã sản phẩm" 
                                           Style="{StaticResource LabelText}"/>
                                <TextBox Grid.Column="1"
                                         Text="(Tự động tạo)"
                                         IsReadOnly="True"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Height="45"
                                         FontSize="13"
                                         Padding="12,10"
                                         Background="#F5F5F5"
                                         Foreground="#9E9E9E"/>
                            </Grid>

                            <!-- Tên sản phẩm -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Tên sản phẩm *" 
                                           Style="{StaticResource LabelText}"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         materialDesign:HintAssist.Hint="Nhập tên sản phẩm"
                                         Style="{StaticResource ValidatedTextBox}"/>
                            </Grid>

                            <!-- Đơn vị -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Đơn vị tính *" 
                                           Style="{StaticResource LabelText}"/>

                                <ComboBox Grid.Column="1"
                                          IsEditable="True"
                                          ItemsSource="{Binding UnitList}"
                                          SelectedValue="{Binding SelectedUnit, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                          materialDesign:HintAssist.Hint="Ví dụ: Lon, Hộp, Thùng,..."
                                          Style="{StaticResource ValidatedComboBox}">
                                    <ComboBox.Text>
                                        <Binding
                                             Mode="TwoWay"
                                             Path="SelectedUnitText"
                                             UpdateSourceTrigger="PropertyChanged">
                                        </Binding>
                                    </ComboBox.Text>
                                </ComboBox>
                            </Grid>

                            <!-- Giá -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Giá bán (VNĐ) *" 
                                           Style="{StaticResource LabelText}"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, StringFormat=N0}"
                                         materialDesign:HintAssist.Hint="Nhập giá bán"
                                         Style="{StaticResource ValidatedTextBox}"/>
                            </Grid>

                            <!-- Số lượng tồn -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Số lượng *" 
                                           Style="{StaticResource LabelText}"/>
                                <TextBox Grid.Column="1"
                                         Text="{Binding StockQuantity, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                         Style="{StaticResource ValidatedTextBox}"/>
                            </Grid>

                            <!-- Danh mục -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Danh mục *" 
                                           Style="{StaticResource LabelText}"/>
                                <ComboBox Grid.Column="1"
                                          IsEditable="True"
                                          ItemsSource="{Binding CategoryList}"
                                          DisplayMemberPath="CategoryName"
                                          SelectedValuePath="CategoryID"
                                          SelectedValue="{Binding SelectedCategoryID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                          materialDesign:HintAssist.Hint="Danh mục"
                                          Style="{StaticResource ValidatedComboBox}">
                                    <ComboBox.Text>
                                        <Binding
                                              Mode="TwoWay"
                                              Path="SelectedCategoryText"
                                              UpdateSourceTrigger="PropertyChanged"/>
                                    </ComboBox.Text>
                                </ComboBox>
                            </Grid>

                           
                        </StackPanel>

                        <!-- Nút hành động -->
                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,20,0,0">
                            <Button Height="45" 
                                    Width="130"
                                    Margin="0,0,10,0"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding CloseCommand}"
                                    CommandParameter="{Binding ElementName=addProductWindow}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                            Width="20" 
                                                            Height="20"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="Hủy bỏ" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Height="45" 
                                    Width="130"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#2196F3"
                                    BorderBrush="{x:Null}"
                                    Command="{Binding SaveCommand}"
                                    CommandParameter="{Binding ElementName=addProductWindow}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Check" 
                                                            Width="20" 
                                                            Height="20"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"/>
                                    <TextBlock Text="Lưu" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>