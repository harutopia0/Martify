<UserControl x:Class="Martify.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="864"
             Style="{StaticResource Page_RadarReveal_Style}">

    <UserControl.DataContext>
        <vm:SettingsVM />
    </UserControl.DataContext>

    <Grid Background="{DynamicResource MainBackground}">
        <TextBlock Text="Cài Đặt Hệ Thống"
                   FontSize="30" FontFamily="Roboto Black" 
                   Foreground="{DynamicResource PrimaryText}"
                   Margin="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Border Background="{DynamicResource CardBackground}" 
                Margin="30,80,30,30" CornerRadius="30">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}" 
                                  BlurRadius="15" ShadowDepth="4" Direction="270" Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="30">

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0" Kind="AccountCircle" Width="40" Height="40" Foreground="#067FF8" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Thông Tin Tài Khoản" FontSize="18" FontFamily="Roboto Bold" 
                                       Foreground="{DynamicResource PrimaryText}"/>
                            <TextBlock Text="Chỉnh sửa thông tin cá nhân và mật khẩu" FontSize="14" FontFamily="Roboto" 
                                       Foreground="{DynamicResource SecondaryText}"/>
                        </StackPanel>

                        <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}" 
                                Content="CHỈNH SỬA" Foreground="#067FF8"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <materialDesign:PackIcon Grid.Column="0" Kind="Tune" Width="40" Height="40" Foreground="#FF9800" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Cấu Hình Chung" FontSize="18" FontFamily="Roboto Bold" 
                                       Foreground="{DynamicResource PrimaryText}"/>
                            <TextBlock Text="Ngôn ngữ, thông báo và giao diện" FontSize="14" FontFamily="Roboto" 
                                       Foreground="{DynamicResource SecondaryText}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                Command="{Binding OpenConfigCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}" 
                                Content="CÀI ĐẶT" BorderBrush="#FF9800" Foreground="#FF9800"/>
                    </Grid>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" CornerRadius="15" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Grid.Column="0" Kind="Information" Width="40" Height="40" Foreground="#4CAF50" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Về Martify" FontSize="18" FontFamily="Roboto Bold" 
                                       Foreground="{DynamicResource PrimaryText}"/>
                            <TextBlock Text="Phiên bản 1.0.0 - Copyright 2024" FontSize="14" FontFamily="Roboto" 
                                       Foreground="{DynamicResource SecondaryText}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <Grid Background="#AA000000" Visibility="{Binding ConfigVisibility}">
            <Border Width="400" Height="300" 
                    Background="{DynamicResource CardBackground}" 
                    CornerRadius="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Chi Tiết Cấu Hình" FontSize="20" FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryText}"/>

                    <StackPanel Grid.Row="1" VerticalAlignment="Center">
                        <CheckBox Content="Bật thông báo hệ thống" Margin="0,10"
                                  Foreground="{DynamicResource PrimaryText}"/>

                        <CheckBox Content="Chế độ tối (Dark Mode)" 
                                  IsChecked="{Binding IsDarkMode}" 
                                  Margin="0,10"
                                  Foreground="{DynamicResource PrimaryText}"/>

                        <ComboBox materialDesign:HintAssist.Hint="Ngôn Ngữ" Margin="0,10"
                                  Foreground="{DynamicResource PrimaryText}">
                            <ComboBoxItem Content="Tiếng Việt"/>
                            <ComboBoxItem Content="English"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Hủy" Style="{StaticResource MaterialDesignFlatButton}" 
                                Command="{Binding CloseConfigCommand}" Margin="0,0,10,0"/>
                        <Button Content="Lưu Thay Đổi" Command="{Binding CloseConfigCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>