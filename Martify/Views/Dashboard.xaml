<UserControl x:Class="Martify.Views.Dashboard"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:local="clr-namespace:Martify.Views"
         xmlns:vm="clr-namespace:Martify.ViewModels" 
         xmlns:converters="clr-namespace:Martify.Converters"
         xmlns:behaviors="clr-namespace:Martify.Behaviors"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         mc:Ignorable="d" 
         d:DesignHeight="720" d:DesignWidth="864"
         Style="{StaticResource Page_RadarReveal_Style}"
         d:Style="{x:Null}">

    <UserControl.Resources>
        <converters:RevenueHeightConverter x:Key="RevenueHeightConverter"/>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:DashboardVM />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="280"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="379*"/>
                <ColumnDefinition Width="235*"/>
            </Grid.ColumnDefinitions>
            <Border Background="{DynamicResource CardBackground}" 
                    Margin="20,20,15,0"
                    CornerRadius="20" Grid.ColumnSpan="2">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Margin="25,15,0,0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                        <TextBlock Text="Doanh Thu Tuần Gần Nhất"
                                   FontSize="25" 
                                   FontFamily="Roboto Black"
                                   Foreground="{DynamicResource PrimaryText}"
                                   VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Kind="CurrencyUsd"
                                                 Width="28"
                                                 Height="28"
                                                 Foreground="#4CAF50"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Chart Area -->
                    <ItemsControl 
                                  ItemsSource="{Binding DailyRevenues}"
                                  Margin="25,6,25,9" Grid.Row="1">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Bar Container -->
                                    <Grid Grid.Row="0" VerticalAlignment="Bottom" Margin="0,0,0,5">
                                        <Grid.ToolTip>
                                            <ToolTip Background="Transparent" 
                                                     BorderBrush="Transparent"
                                                     BorderThickness="0"
                                                     Padding="8"
                                                     HasDropShadow="True">
                                                <Border CornerRadius="15" 
                                                        Padding="15"
                                                        Background="{DynamicResource CardBackground}"
                                                        BorderBrush="#067FF8"
                                                        BorderThickness="2"
                                                        Margin="10">
                                                    <Border.Effect>
                                                        <DropShadowEffect Color="#000000"
                                                                          BlurRadius="20"
                                                                          ShadowDepth="5"
                                                                          Direction="270"
                                                                          Opacity="0.4"/>
                                                    </Border.Effect>
                                                    <StackPanel Width="280">
                                                        <!-- Date Header -->
                                                        <TextBlock Text="{Binding FullDate}"
                                                                   FontSize="14"
                                                                   FontFamily="Roboto Bold"
                                                                   Foreground="{DynamicResource PrimaryText}"
                                                                   TextWrapping="Wrap"
                                                                   Margin="0,0,0,10"/>

                                                        <!-- Revenue Amount -->
                                                        <Border Background="#067FF8" 
                                                                CornerRadius="8"
                                                                Padding="10"
                                                                Margin="0,0,0,10">
                                                            <StackPanel>
                                                                <TextBlock Text="Doanh thu"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto Medium"
                                                                           Foreground="White"
                                                                           Opacity="0.9"/>
                                                                <TextBlock Text="{Binding FormattedRevenue}"
                                                                           FontSize="16"
                                                                           FontFamily="Roboto Bold"
                                                                           Foreground="White"
                                                                           Margin="0,2,0,0"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- Proportion of Week -->
                                                        <Grid Margin="0,0,0,8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="0"
                                                                       Text="Tỷ lệ trong tuần"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Medium"
                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding PercentageOfWeekFormatted}"
                                                                       FontSize="13"
                                                                       FontFamily="Roboto Bold"
                                                                       Foreground="#067FF8"
                                                                       VerticalAlignment="Center"/>
                                                        </Grid>

                                                        <!-- Separator -->
                                                        <Border Height="1" 
                                                                Background="{DynamicResource SecondaryText}"
                                                                Opacity="0.2"
                                                                Margin="0,5,0,10"/>

                                                        <!-- Comparison with Previous Day -->
                                                        <Grid Margin="0,0,0,6">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowLeft"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày trước"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithPreviousFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasPreviousDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>

                                                        <!-- Comparison with Next Day -->
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                <materialDesign:PackIcon Kind="ArrowRight"
                                                                                       Width="14"
                                                                                       Height="14"
                                                                                       Foreground="{DynamicResource SecondaryText}"
                                                                                       VerticalAlignment="Center"
                                                                                       Margin="0,0,5,0"/>
                                                                <TextBlock Text="So với ngày sau"
                                                                           FontSize="11"
                                                                           FontFamily="Roboto"
                                                                           Foreground="{DynamicResource SecondaryText}"
                                                                           VerticalAlignment="Center"/>
                                                            </StackPanel>
                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding ComparisonWithNextFormatted}"
                                                                       FontSize="12"
                                                                       FontFamily="Roboto Bold"
                                                                       VerticalAlignment="Center">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding HasNextDay}" Value="True">
                                                                                <Setter Property="Foreground" Value="Green"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </StackPanel>
                                                </Border>
                                            </ToolTip>
                                        </Grid.ToolTip>

                                        <Border Background="#F5F5F5" 
                                                CornerRadius="5"
                                                Height="120"
                                                VerticalAlignment="Bottom"/>

                                        <Border behaviors:BarAnimationBehavior.AnimateOnLoad="True"
                                                Background="#067FF8" 
                                                CornerRadius="5"
                                                VerticalAlignment="Bottom"
                                                MinHeight="2">
                                            <Border.Height>
                                                <MultiBinding Converter="{StaticResource RevenueHeightConverter}">
                                                    <Binding Path="Revenue"/>
                                                    <Binding Path="MaxRevenue"/>
                                                </MultiBinding>
                                            </Border.Height>
                                        </Border>
                                    </Grid>

                                    <!-- Day of week -->
                                    <TextBlock Grid.Row="1" 
                                               Text="{Binding DayOfWeek}"
                                               FontSize="11"
                                               FontFamily="Roboto Medium"
                                               Foreground="{DynamicResource SecondaryText}"
                                               HorizontalAlignment="Center"
                                               Margin="0,5,0,2"/>

                                    <!-- Date -->
                                    <TextBlock Grid.Row="2" 
                                               Text="{Binding DayLabel}"
                                               FontSize="12"
                                               FontFamily="Roboto Bold"
                                               Foreground="{DynamicResource PrimaryText}"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Total Revenue and Comparison at bottom -->
                    <Grid Grid.Row="2" Margin="25,2,25,13">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left">
                            <TextBlock Text="Tổng: "
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       Foreground="{DynamicResource SecondaryText}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding GiaTriDoanhThu, StringFormat={}{0:N0} VND}"
                                       FontSize="20"
                                       FontFamily="Roboto Bold"
                                       Foreground="#067FF8"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <TextBlock Text="{Binding TyLeThayDoi, StringFormat={}{0:F1}%}"
                                       FontSize="16"
                                       FontFamily="Roboto Bold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <materialDesign:PackIcon Width="20"
                                                     Height="20"
                                                     VerticalAlignment="Center">
                                <materialDesign:PackIcon.Style>
                                    <Style TargetType="materialDesign:PackIcon">
                                        <Setter Property="Kind" Value="TrendingUp"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsRevenueIncreased}" Value="False">
                                                <Setter Property="Kind" Value="TrendingDown"/>
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </materialDesign:PackIcon.Style>
                            </materialDesign:PackIcon>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Column="1" 
                Grid.Row="0" 
                Grid.RowSpan="3"
                Background="{DynamicResource CardBackground}" 
                Margin="0,20,20,20"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Margin="15">
                <TextBlock Text="Tổng Quan Nhanh"
                           FontSize="20"
                           FontFamily="Roboto Black"
                           Margin="0,10,0,20"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource PrimaryText}"/>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="ProductsCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Package" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#067FF8"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Sản Phẩm"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoSanPham, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#067FF8"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="InvoicesCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="Receipt" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#4CAF50"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Đơn Hàng"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoDonHang, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#4CAF50"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Cursor="Hand"
                        MouseLeftButtonDown="EmployeesCard_Click">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#FF9800"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Nhân Viên"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding TongSoNhanVien, StringFormat={}{0:N0}}"
                                   FontSize="28"
                                   FontFamily="Roboto Bold"
                                   Foreground="#FF9800"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Thẻ Cảnh Báo Tồn Kho -->
                <Border Background="{DynamicResource ItemBackground}" 
                        CornerRadius="15" 
                        Padding="15" 
                        Margin="0,0,0,0">
                    <StackPanel>
                        <!-- Header -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                     Width="24" 
                                                     Height="24" 
                                                     Foreground="#F44336"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,10,0"/>
                            <TextBlock Text="Cảnh Báo"
                                       FontSize="16"
                                       FontFamily="Roboto Medium"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryText}"/>
                        </StackPanel>

                        <!-- Cảnh báo sắp hết hàng (Vàng/Cam) -->
                        <Border Background="#FFF3E0" 
                                CornerRadius="8" 
                                Padding="10,8"
                                Margin="0,0,0,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="LowStockAlert_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="TrendingDown" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#FF9800"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>

                                <TextBlock Grid.Column="1"
                                           Text="Sắp hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#F57C00"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamSapHet, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#FF9800"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                        <!-- Cảnh báo hết hàng (Đỏ) -->
                        <Border Background="#FFEBEE" 
                                CornerRadius="8" 
                                Padding="10,8"
                                Cursor="Hand"
                                MouseLeftButtonDown="OutOfStockAlert_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="PackageVariantClosed" 
                                                         Width="18" 
                                                         Height="18" 
                                                         Foreground="#F44336"
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,8,0"/>

                                <TextBlock Grid.Column="1"
                                           Text="Hết hàng"
                                           FontSize="12"
                                           FontFamily="Roboto Medium"
                                           Foreground="#D32F2F"
                                           VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding SoSanPhamHetHang, StringFormat={}{0:N0}}"
                                           FontSize="16"
                                           FontFamily="Roboto Bold"
                                           Foreground="#F44336"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Quick Actions Bar - Unified Container -->
        <Border Grid.Column="0" 
                Grid.Row="1"
                Background="{DynamicResource CardBackground}"
                CornerRadius="20"
                Margin="20,0,15,20"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                  BlurRadius="15"
                                  ShadowDepth="4"
                                  Direction="270"
                                  Opacity="0.3"/>
            </Border.Effect>

            <UniformGrid Columns="4" HorizontalAlignment="Stretch">

                <!-- Action 1: Create Order -->
                <Border Background="{DynamicResource ItemBackground}"
                        CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#E3F2FD"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="CartPlus"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#2196F3"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Tạo Đơn Mới"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 2: Import Goods -->
                <Border Background="{DynamicResource ItemBackground}"
                        CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#E8F5E9"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="PackageDown"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#4CAF50"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Nhập Hàng"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 3: Check Price -->
                <Border Background="{DynamicResource ItemBackground}"
                        CornerRadius="15"
                        Margin="0,0,10,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#FFF3E0"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="Barcode"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#FF9800"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Tra Cứu Giá"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Action 4: Add Employee -->
                <Border Background="{DynamicResource ItemBackground}"
                        CornerRadius="15"
                        Margin="0,0,0,0"
                        Padding="15,12"
                        Cursor="Hand">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#F3E5F5"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="AccountPlus"
                                                 Width="32"
                                                 Height="32"
                                                 Foreground="#9C27B0"
                                                 HorizontalAlignment="Center"
                                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Thêm Nhân Viên"
                                   FontSize="13"
                                   FontFamily="Roboto Medium"
                                   Foreground="{DynamicResource PrimaryText}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </Border>

        <!-- Bottom Section: Two Column Layout -->
        <Grid Grid.Column="0" 
              Grid.Row="2"
              Margin="20,0,15,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: High Value Invoices -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBackground}" 
                    Margin="0,0,10,0"
                    CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Margin="25,15,25,10"
                                HorizontalAlignment="Stretch">
                        <TextBlock Text="Hóa Đơn Giá Trị Cao Tuần"
                                   FontSize="20"
                                   FontFamily="Roboto Black"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource PrimaryText}"/>

                        <materialDesign:PackIcon Kind="Trophy" 
                                                 Width="28" 
                                                 Height="28" 
                                                 Foreground="#FFD700"
                                                 VerticalAlignment="Center"
                                                 Margin="10,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  Margin="15,0,15,15">
                        <ItemsControl ItemsSource="{Binding TopInvoices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ItemBackground}" 
                                            CornerRadius="15" 
                                            Padding="15" 
                                            Margin="5,5,5,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                    Background="{Binding RankColor}" 
                                                    CornerRadius="10" 
                                                    Width="40" 
                                                    Height="40"
                                                    Margin="0,0,7,0">
                                                <TextBlock Text="{Binding Rank}" 
                                                           FontSize="20" 
                                                           FontFamily="Roboto Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding InvoiceID}"
                                                           FontSize="16"
                                                           FontFamily="Roboto Bold"
                                                           Foreground="{DynamicResource PrimaryText}"/>
                                                <TextBlock Text="{Binding EmployeeName}"
                                                           FontSize="12"
                                                           FontFamily="Roboto"
                                                           Foreground="{DynamicResource SecondaryText}"
                                                           Margin="0,2,0,0"/>
                                                <TextBlock Text="{Binding FormattedDate}"
                                                           FontSize="10"
                                                           FontFamily="Roboto Light"
                                                           Foreground="{DynamicResource SecondaryText}"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding FormattedAmount}"
                                                       FontSize="16"
                                                       FontFamily="Roboto Bold"
                                                       Foreground="{Binding RankColor}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Right Column: Best Selling Products -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource CardBackground}" 
                    Margin="10,0,0,0"
                    CornerRadius="20">
                <Border.Effect>
                    <DropShadowEffect Color="{DynamicResource ShadowColor}"
                                      BlurRadius="15"
                                      ShadowDepth="4"
                                      Direction="270"
                                      Opacity="0.3"/>
