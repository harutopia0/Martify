<UserControl x:Class="Martify.Views.WindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             xmlns:ctrl="clr-namespace:Martify.Controls"
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ucWindowControl"
             d:Style="{x:Null}">

    <UserControl.Resources>
        <Style x:Key="CompletelyCustomButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="MediumSeaGreen"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid x:Name="HoverArea" 
              Height="30"
              VerticalAlignment="Top"
              Background="Transparent">

            <Grid x:Name="Dragging_Zone" Background="Transparent">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding DragWindowCommand}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Grid>
        </Grid>

        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0" Orientation="Horizontal"
                    Panel.ZIndex="1">
            <Button Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Transparent"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="30" Height="30"
                    Margin="0,0,10,0"
                    IsTabStop="False"
                    Style="{StaticResource CompletelyCustomButtonStyle}"
                    Command="{Binding HideWindowCommand}"
                    CommandParameter="{Binding ElementName=ucWindowControl}">
                <Image Source="{StaticResource MinimizeProgram}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="20" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="30" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>

            <Button Background="Transparent" 
                    BorderBrush="Transparent" 
                    Foreground="Transparent"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="30" Height="30"
                    Margin="0,0,0,0"
                    IsTabStop="False"
                    Style="{StaticResource CompletelyCustomButtonStyle}"
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding ElementName=ucWindowControl}">
                <Image Source="{StaticResource CloseProgram}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Cursor="Hand">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Width" Value="20" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Width" Value="30" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
        </StackPanel>

        <local:CloseAlert Visibility="{Binding IsAlertVisible}" 
                          Panel.ZIndex="999"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
    </Grid>
</UserControl>