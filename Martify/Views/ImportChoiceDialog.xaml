<Window x:Class="Martify.Views.ImportChoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Chon Cach Nhap" 
        Height="473" 
        Width="525"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border CornerRadius="20">
        <Border Background="{DynamicResource CardBackground}" 
                CornerRadius="20" 
                Width="480" 
                Height="430"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#000000"
                                  BlurRadius="20"
                                  ShadowDepth="5"
                                  Direction="270"
                                  Opacity="0.4"/>
            </Border.Effect>

            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header with Icon -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,20">
                    <materialDesign:PackIcon Kind="PackageVariant" 
                                             Width="36" 
                                             Height="36" 
                                             Foreground="#4CAF50" 
                                             VerticalAlignment="Center" 
                                             Margin="0,0,12,0"/>
                    <TextBlock Text="Nhập Hàng" 
                               FontSize="28" 
                               FontFamily="Roboto Bold" 
                               Foreground="{DynamicResource PrimaryText}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Question Text -->
                <TextBlock Grid.Row="1" 
                           Text="Hãy lựa chọn một cách nhập" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           FontSize="16"
                           FontFamily="Roboto Medium"
                           Foreground="{DynamicResource SecondaryText}"
                           Margin="0,0,0,25"/>

                <!-- Action Cards -->
                <UniformGrid Grid.Row="2" 
                             Columns="2" 
                             HorizontalAlignment="Stretch"
                             Margin="0,0,0,20">

                    <!-- Add New Product Card -->
                    <Border Background="{DynamicResource ItemBackground}"
                            CornerRadius="15"
                            Margin="0,0,8,0"
                            Padding="20"
                            Cursor="Hand"
                            MouseLeftButtonDown="AddNewProduct_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#E3F2FD"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#067FF8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Background="#E3F2FD"
                                    CornerRadius="50"
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="PackageVariantAdd"
                                                         Width="45"
                                                         Height="45"
                                                         Foreground="#067FF8"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Thêm sản phẩm mới"
                                       FontSize="15"
                                       FontFamily="Roboto Bold"
                                       Foreground="{DynamicResource PrimaryText}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Thêm loại sản phẩm mới chưa có trong kho"
                                       FontSize="11"
                                       FontFamily="Roboto"
                                       Foreground="{DynamicResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Import Existing Product Card -->
                    <Border Background="{DynamicResource ItemBackground}"
                            CornerRadius="15"
                            Margin="8,0,0,0"
                            Padding="20"
                            Cursor="Hand"
                            MouseLeftButtonDown="ImportProducts_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#E8F5E9"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Background="#E8F5E9"
                                    CornerRadius="50"
                                    Width="80"
                                    Height="80"
                                    Margin="0,0,0,15">
                                <materialDesign:PackIcon Kind="PackageDown"
                                                         Width="45"
                                                         Height="45"
                                                         Foreground="#4CAF50"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nhập lại hàng"
                                       FontSize="15"
                                       FontFamily="Roboto Bold"
                                       Foreground="{DynamicResource PrimaryText}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="Thêm sản phẩm vào loại đã có trong kho"
                                       FontSize="11"
                                       FontFamily="Roboto"
                                       Foreground="{DynamicResource SecondaryText}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

                <!-- Cancel Button -->
                <Button Grid.Row="3"
                        Content="Hủy"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="120" 
                        Height="42"
                        FontSize="14"
                        FontFamily="Roboto Medium"
                        HorizontalAlignment="Center"
                        BorderBrush="{DynamicResource SecondaryText}"
                        Foreground="{DynamicResource SecondaryText}"
                        Click="Cancel_Click"/>
            </Grid>
        </Border>
    </Border>
</Window>
