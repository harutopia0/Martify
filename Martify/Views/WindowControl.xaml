<UserControl x:Class="Martify.Views.WindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:Martify.Views"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ucWindowControl">
    <UserControl.Resources>
        <Style x:Key="CompletelyCustomButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="2 10 10 10"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="MediumSeaGreen"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- Hover detection area that contains both dragging zone and buttons -->
        <Grid x:Name="HoverArea" 
              Height="50"
              VerticalAlignment="Top"
              Background="Transparent">
            <Grid.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlButton" 
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimation Storyboard.TargetName="ControlButton"
                                           Storyboard.TargetProperty="Opacity"
                                           From="0" To="1" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="ControlButton"
                                           Storyboard.TargetProperty="Opacity"
                                           From="1" To="0" Duration="0:0:0.3"/>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ControlButton" 
                                                           Storyboard.TargetProperty="Visibility">
                                <DiscreteObjectKeyFrame KeyTime="0:0:0.3" Value="{x:Static Visibility.Collapsed}"/>
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Grid.Triggers>
            
            <!-- Dragging Zone (covers full width) -->
            <Grid x:Name="Dragging_Zone" 
                  Background="Transparent">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding DragWindowCommand}"
                                               CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Grid>

            <!-- Control Buttons (on top of dragging zone) -->
            <StackPanel x:Name="ControlButton"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Height="50" 
                        Margin="0,0,10,0" 
                        Orientation="Horizontal"
                        Visibility="Collapsed"
                        Background="Transparent">
                
                <Button Command="{Binding HideWindowCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" 
                        Background="transparent"
                        Height="30" Width="30"
                        Style="{StaticResource CompletelyCustomButtonStyle}">
                    <Image Height="20"
                           Width="20"
                           Source="/Resources/Images/minimize_program.png"/>
                </Button>
                
                <Button Command="{Binding CloseWindowCommand}"
                        CommandParameter="{Binding ElementName=ucWindowControl}"
                        Background="transparent"
                        Height="30" Width="30"
                        Style="{StaticResource CompletelyCustomButtonStyle}">
                    <Image Source="/Resources/Images/close_program.png"/>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>