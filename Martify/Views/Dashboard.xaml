<UserControl x:Class="Martify.Views.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Martify.Views"
             xmlns:vm="clr-namespace:Martify.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">

    <UserControl.DataContext>
        <vm:DashboardVM />
    </UserControl.DataContext>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="1">
                <Grid Width="500" Height="400"
                      Margin="25,0,0,25"
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Left">
                    <Border Background="LightPink"
                            CornerRadius="20">

                    </Border>
                </Grid>

                <Grid Width="400" Height="200"
                      Margin="50,55,0,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left">
                    <Border Background="LightPink"
                            CornerRadius="20">

                    </Border>
                </Grid>

                <Grid Width="300" Height="400"
                      Margin="0,25,25,0"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Right">
                    <Border Background="LightPink"
                            CornerRadius="20">

                    </Border>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</UserControl>
