<Window x:Class="Martify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:Martify" 
        xmlns:uc="clr-namespace:Martify.Views"
        mc:Ignorable="d"
        Title="Marity" 
        Height="720" Width="1080"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}" 
                                   CommandParameter="{Binding ElementName=mainWindow}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Border Background="#FFDFDFDF" 
                CornerRadius="30" >

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#067FF8" CornerRadius="30,30,0,0"></Border>
                    <Border Grid.Row="1" CornerRadius="0,0,30,30">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#067FF8"/>
                                <GradientStop Color="#FF3654F1" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>


                    <Grid Grid.Row="0" Margin="25">

                        <Image Source="{StaticResource User}" Stretch="Uniform" 
                               VerticalAlignment="Top"
                               Width="140"
                               Margin="0,0,0,20"
                               />

                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding FullName}"
                                       FontSize="20"
                                       Foreground="White"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Email}"
                                       Margin="0,0,0,-15"
                                       FontSize="12"
                                       Foreground="White"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                    </Grid>
                    <Grid Grid.Row="1">
                        <uc:SidePanel Margin="0,30,0,0" HorizontalAlignment="Left"/>

                    </Grid>
                </Grid>


                <Grid Grid.Column="1">
                    <ContentControl x:Name="Pages"
                                    Content="{Binding Navigation.CurrentView}"></ContentControl>
                </Grid>

            </Grid>

        </Border>


        <uc:WindowControl/>
    </Grid>
</Window>
