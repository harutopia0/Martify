<Window x:Class="loginForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com:8000/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginForm"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Storyboard x:Key="GradientRotateStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="AnimatedBorderBrush"
                             Storyboard.TargetProperty="Transform.Children[0].Angle"
                             From="0" To="360" Duration="0:0:5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="20" BorderThickness="8">
            <Border.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard Storyboard="{StaticResource GradientRotateStoryboard}"/>
                </EventTrigger>
            </Border.Triggers>

            <Border.BorderBrush>
                <LinearGradientBrush x:Name="AnimatedBorderBrush" 
                                     StartPoint="0,0" EndPoint="1,1">

                    <GradientStop Color="#FF055BAC" Offset="0.00" />
                    <GradientStop Color="#FF71FBF8" Offset="0.30" />
                    <GradientStop Color="#FF000000" Offset="0.55" />
                    <GradientStop Color="#FF71FBF8" Offset="0.80" />
                    <GradientStop Color="#FF055BAC" Offset="1.00" />
                    <LinearGradientBrush.Transform>
                        <TransformGroup>
                            <RotateTransform CenterX="0.5" CenterY="0.5" />
                        </TransformGroup>
                    </LinearGradientBrush.Transform>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border Background="White" CornerRadius="15.7">
                <Grid>
                    <Grid Margin="300,50,0,30">
                        <Image Source="assets/login-banner.png" />
                    </Grid>
                </Grid>
            </Border>
        </Border>
        <Image Source="assets/x_icon.png"
               Margin="0,15,15,0"
               Width="30" Height="30"
               HorizontalAlignment="Right"
               VerticalAlignment="Top"
               MouseLeftButtonDown="CloseProgram_Click"
               ToolTip="Close Program"/>
        <Image Source="assets/Martify.png"
               Margin="25,25,715,0"
               Width="60" Height="60"
               VerticalAlignment="Top" />
        <Label Content="Martify"
               FontFamily="Comic Sans MS"
               Margin="90,30,35,370"
               FontSize="30"
               FontWeight="Bold"
               VerticalContentAlignment="Center"
               Foreground="#FF055BAC" />

        <Image Source="assets/blur_image.png" 
               Margin="24,90,0,0" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left"
               RenderTransformOrigin="0.369,0.45" Height="319"></Image>

        <Grid Margin="44,107,508,70">
            <Border CornerRadius="20" 
                    BorderThickness="2"
                    BorderBrush="Black">
                <Border Background="Gray" 
                        Opacity="0.14"
                        CornerRadius="17">
                </Border>
            </Border>
        </Grid>


        <Grid Margin="44,107,508,70">
            <Border CornerRadius="20" 
                    BorderThickness="2"
                    BorderBrush="Black">

            </Border>

            <Label Content="Sign in"
                   FontFamily="Comic Sans MS"
                   Margin="8,8,0,210"
                   FontSize="30"
                   FontWeight="Bold"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="#FF055BAC" RenderTransformOrigin="0.5,0.5" >
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="23.775"/>
                        <RotateTransform/>
                        <TranslateTransform X="10.15"/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>

            <Label Content="Username or email address"
                   FontFamily="/fonts/YanoneKaffeesatz-Regular.ttf#Yanone Kaffeesatz"
                   Margin="20,71,0,178"
                   FontSize="16"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="Gray" />
            <Grid Margin="24,100,53,145">
                <Border x:Name="usernameBorder" 
                        BorderThickness="1" 
                        BorderBrush="Gray" 
                        CornerRadius="3">
                    <Border Background="AliceBlue" CornerRadius="4">
                        <TextBox x:Name="usernameTextBox"
                                 VerticalContentAlignment="Center"          
                                 FontFamily="/fonts/YanoneKaffeesatz-Regular.ttf#Yanone Kaffeesatz"
                                 FontSize="12.5"
                                 BorderBrush="Transparent"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="Black"
                                 GotFocus="usernameTextBoxGotFocus"
                                 LostFocus="usernameTextBoxLostFocus"/>
                    </Border>
                </Border>
            </Grid>


            <Label Content="Password"
                   FontFamily="/fonts/YanoneKaffeesatz-Regular.ttf#Yanone Kaffeesatz"
                   Margin="20,151,0,99"
                   FontSize="16"
                   VerticalContentAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="Gray" Width="142" />
            <Grid Margin="24,179,53,66">
                <Border x:Name="passwordBorder" 
                        BorderThickness="1" 
                        BorderBrush="Gray" 
                        CornerRadius="3">
                    <Border Background="AliceBlue" CornerRadius="4">
                        <PasswordBox x:Name="passwordBox"
                                     VerticalContentAlignment="Center"          
                                     FontFamily="/fonts/YanoneKaffeesatz-Regular.ttf#Yanone Kaffeesatz"
                                     FontSize="12.5"
                                     BorderBrush="Transparent"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="Black"
                                     GotFocus="passwordBoxGotFocus"
                                     LostFocus="passwordBoxLostFocus"/>
                    </Border>
                </Border>
            </Grid>
            
        </Grid>
    </Grid>
</Window>